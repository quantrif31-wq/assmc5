@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Liên kết tài khoản";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<style>
    /* 1. Tiêu đề chuẩn font 850 và Icon đồng bộ */
    .header-section {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 5px;
    }

    .header-icon {
        font-size: 26px;
        display: flex;
        align-items: center;
    }

    .content-header-title {
        font-weight: 850;
        font-size: 28px;
        color: #1a1a1a;
        margin: 0;
        letter-spacing: -0.5px;
    }

    .manage-subtitle {
        font-size: 13px;
        color: rgba(0, 0, 0, 0.4);
        margin-bottom: 30px;
        font-weight: 600;
        display: block;
    }

    /* 2. Danh sách các liên kết hiện có */
    .login-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 35px;
    }

    .login-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        background: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 16px;
        transition: all 0.3s ease;
    }

        .login-item:hover {
            background: rgba(255, 255, 255, 0.8);
            transform: translateY(-2px);
        }

    .provider-name {
        font-weight: 700;
        color: #2c2c2c;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* 3. Nút Gỡ liên kết (Soft Gray) */
    .btn-remove-glass {
        padding: 8px 16px;
        background: rgba(0, 0, 0, 0.05);
        border: none;
        border-radius: 10px;
        color: #666;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-remove-glass:hover {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

    /* 4. Phần thêm liên kết mới */
    .add-auth-section {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .add-title {
        font-size: 12px;
        font-weight: 800;
        text-transform: uppercase;
        color: rgba(0, 0, 0, 0.4);
        margin-bottom: 15px;
        letter-spacing: 1px;
    }

    /* 5. Nút liên kết mới (Ink Style) */
    .btn-link-ink {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 14px;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 10px;
    }

        .btn-link-ink:hover {
            background: #333;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
</style>

<div class="ext-manage-container">
    <div class="header-section">
        <span class="header-icon">🌐</span>
        <h3 class="content-header-title">@ViewData["Title"]</h3>
    </div>
    <span class="manage-subtitle">Quản lý các dịch vụ bên thứ ba dùng để đăng nhập vào tài khoản của bạn</span>

    <partial name="_StatusMessage" for="StatusMessage" />

    @if (Model.CurrentLogins?.Count > 0)
    {
        <div class="add-title">Tài khoản đã liên kết</div>
        <div class="login-list">
            @foreach (var login in Model.CurrentLogins)
            {
                <div class="login-item">
                    <div class="provider-name">
                        <span>🔑</span> @login.ProviderDisplayName
                    </div>
                    @if (Model.ShowRemoveButton)
                    {
                        <form asp-page-handler="RemoveLogin" method="post">
                            <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                            <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                            <button type="submit" class="btn-remove-glass">
                                Gỡ bỏ
                            </button>
                        </form>
                    }
                </div>
            }
        </div>
    }

    @if (Model.OtherLogins?.Count > 0)
    {
        <div class="add-auth-section">
            <div class="add-title">Thêm liên kết mới</div>
            <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
                @foreach (var provider in Model.OtherLogins)
                {
                    <button type="submit" class="btn-link-ink" name="provider" value="@provider.Name">
                        <span>🔗</span> LIÊN KẾT VỚI @provider.DisplayName.ToUpper()
                    </button>
                }
            </form>
        </div>
    }
</div>