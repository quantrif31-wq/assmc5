@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    /* Container giới hạn độ rộng form để cân đối với giao diện chung */
    .password-manage-container {
        max-width: 500px;
    }

    /* Tiêu đề phụ đồng bộ font 850 chuẩn phong cách hiện đại */
    /* Container tiêu đề */
    .header-section {
        display: flex;
        align-items: center;
        gap: 12px; /* Khoảng cách chuẩn giữa icon và chữ */
        margin-bottom: 5px;
    }

    /* Biểu tượng - giúp emoji cân đối hơn */
    .header-icon {
        font-size: 26px; /* Kích thước vừa phải, không quá to */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Tiêu đề chính đậm nét (850) */
    .content-header-title {
        font-weight: 850;
        font-size: 28px;
        color: #1a1a1a;
        margin: 0;
        letter-spacing: -0.5px; /* Giúp font chữ trông hiện đại hơn */
        text-transform: none; /* Giữ nguyên hoa thường để dễ đọc */
    }

    /* Dòng mô tả phụ - cực kỳ quan trọng để giao diện trông bớt "trống" */
    .manage-subtitle {
        font-size: 13px;
        color: rgba(0, 0, 0, 0.4); /* Màu xám mờ tinh tế */
        margin-bottom: 30px;
        font-weight: 600;
        display: block;
        padding-left: 2px;
    }

    /* Group chứa Input và Label */
    .glass-input-group {
        margin-bottom: 20px;
        position: relative;
    }

        .glass-input-group label {
            display: block;
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            color: rgba(0,0,0,0.4);
            margin-bottom: 8px;
            letter-spacing: 1px;
        }

    /* Input kính mờ */
    .glass-control {
        width: 100%;
        padding: 14px 18px;
        background: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        font-weight: 600;
        font-family: inherit;
        transition: all 0.3s ease;
        outline: none;
    }

        .glass-control:focus {
            background: #fff;
            border-color: #000;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        }

    /* Nút Cập nhật màu đen đặc (Ink style) */
    .btn-update-ink {
        width: 100%;
        padding: 15px;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-update-ink:hover {
            background: #333;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* Văn bản lỗi validation */
    .text-danger-custom {
        color: #dc3545;
        font-size: 12px;
        font-weight: 600;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="password-manage-container">
    <div class="header-section">
        <div class="header-icon">🔑</div>
        <h3 class="content-header-title">Đổi mật khẩu</h3>
    </div>
    <span class="manage-subtitle">Thiết lập mật khẩu mới để bảo vệ an toàn cho tài khoản của bạn</span>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger-custom" role="alert"></div>

        <div class="glass-input-group">
            <label asp-for="Input.OldPassword">Mật khẩu hiện tại</label>
            <input asp-for="Input.OldPassword" class="glass-control" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu cũ..." />
            <span asp-validation-for="Input.OldPassword" class="text-danger-custom"></span>
        </div>

        <div class="glass-input-group">
            <label asp-for="Input.NewPassword">Mật khẩu mới</label>
            <input asp-for="Input.NewPassword" class="glass-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu mới..." />
            <span asp-validation-for="Input.NewPassword" class="text-danger-custom"></span>
        </div>

        <div class="glass-input-group">
            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu mới</label>
            <input asp-for="Input.ConfirmPassword" class="glass-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận lại mật khẩu..." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger-custom"></span>
        </div>

        <button type="submit" class="btn-update-ink">Cập nhật mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}