@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Thiết lập mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    /* Container cho nội dung bên trong vùng nội dung quản lý */
    .set-password-container {
        max-width: 500px; /* Độ rộng vừa phải cho form nhập liệu */
    }

    /* Tiêu đề phụ (H3) được tùy chỉnh lại theo phong cách hiện đại */
    .content-header-title {
        font-weight: 850;
        font-size: 22px;
        color: #1a1a1a;
        margin-bottom: 15px;
        letter-spacing: -0.5px;
    }

    /* Đoạn giới thiệu thông tin */
    .info-text-glass {
        background: rgba(0, 0, 0, 0.03);
        padding: 15px 20px;
        border-radius: 12px;
        font-size: 14px;
        color: #555;
        line-height: 1.6;
        margin-bottom: 25px;
        border-left: 4px solid #000;
    }

    /* Tinh chỉnh Input theo phong cách kính mờ */
    .glass-input-group {
        margin-bottom: 20px;
    }

        .glass-input-group label {
            display: block;
            font-size: 12px;
            font-weight: 800;
            text-transform: uppercase;
            color: rgba(0,0,0,0.4);
            margin-bottom: 8px;
            letter-spacing: 1px;
        }

    .glass-control {
        width: 100%;
        padding: 14px 18px;
        background: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        font-weight: 600;
        font-family: inherit;
        transition: all 0.3s ease;
        outline: none;
    }

        .glass-control:focus {
            background: #fff;
            border-color: #000;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        }

    /* Nút bấm Lưu mật khẩu đen đặc (Ink style) */
    .btn-save-ink {
        width: 100%;
        padding: 15px;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .btn-save-ink:hover {
            background: #333;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* Thông báo lỗi validation */
    .text-danger-custom {
        color: #dc3545;
        font-size: 12px;
        font-weight: 600;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="set-password-container">
    <h3 class="content-header-title">Thiết lập mật khẩu của bạn</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="info-text-glass">
        Bạn chưa có mật khẩu cục bộ cho trang web này. Hãy thêm một tài khoản cục bộ để bạn có thể đăng nhập mà không cần sử dụng dịch vụ đăng nhập bên ngoài.
    </div>

    <form id="set-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger-custom" role="alert"></div>

        <div class="glass-input-group">
            <label asp-for="Input.NewPassword">Mật khẩu mới</label>
            <input asp-for="Input.NewPassword" class="glass-control" autocomplete="new-password" placeholder="Nhập mật khẩu mới..." />
            <span asp-validation-for="Input.NewPassword" class="text-danger-custom"></span>
        </div>

        <div class="glass-input-group">
            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
            <input asp-for="Input.ConfirmPassword" class="glass-control" autocomplete="new-password" placeholder="Xác nhận lại mật khẩu..." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger-custom"></span>
        </div>

        <button type="submit" class="btn-save-ink">Lưu mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}