@using Microsoft.AspNetCore.Identity
@using Lab4.Models
@using lab4.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var title = ViewData["Title"] as string ?? "Lab4";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --bgTop: #f4f0e6;
            --bgBottom: #e7efe9;
            --ink: #2c2c2c;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
            color: var(--ink);
            background: radial-gradient(1200px 520px at 50% -140px, rgba(255,255,255,.92), rgba(255,255,255,0) 62%), linear-gradient(180deg, var(--bgTop) 0 40%, var(--bgBottom) 40% 100%);
            overflow-x: hidden;
        }

        /* FRAME */
        .frame {
            position: fixed;
            inset: 18px;
            border-radius: 18px;
            pointer-events: none;
            z-index: 0;
            box-shadow: inset 0 0 0 1px rgba(0,0,0,.06), 0 26px 60px rgba(0,0,0,.08);
        }

        .page {
            min-height: 100vh;
            padding: 26px 0 40px;
            position: relative;
            z-index: 1;
        }

        /* ================= TOPBAR ================= */
        .topbar {
            width: min(1100px, calc(100% - 64px));
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        /* ===== TẦNG TRÊN ===== */
        .top-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .avatar {
            width: 46px;
            height: 46px;
            border-radius: 50%;
            overflow: hidden;
            background: #fff;
            border: 2px solid rgba(255,255,255,.7);
            box-shadow: 0 10px 18px rgba(0,0,0,.12);
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .search-bar {
            display: flex;
            align-items: center;
            gap: 8px;
            background: rgba(255,255,255,.95);
            border: 1px solid rgba(0,0,0,.12);
            border-radius: 999px;
            padding: 8px 14px;
            box-shadow: 0 8px 20px rgba(0,0,0,.10);
        }

            .search-bar input {
                border: none;
                outline: none;
                background: transparent;
                width: 220px;
                font-size: 13px;
                color: var(--ink);
            }

            .search-bar button {
                border: none;
                background: rgba(0,0,0,.65);
                color: #fff;
                padding: 6px 14px;
                border-radius: 999px;
                font-size: 12px;
                font-weight: 600;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 6px;
            }

                .search-bar button:hover {
                    background: rgba(0,0,0,.85);
                }

        /* ===== MENU ===== */
        .menu {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 18px;
            padding: 12px 0;
            border-bottom: 1px solid rgba(0,0,0,.18);
            flex-wrap: wrap;
        }

            .menu a,
            .menu button {
                text-decoration: none;
                background: none;
                border: none;
                color: rgba(0,0,0,.48);
                letter-spacing: .09em;
                font-size: 13px;
            }

                .menu a.active {
                    color: rgba(0,0,0,.85);
                    font-weight: 700;
                }

            .menu .sep {
                color: rgba(0,0,0,.25);
            }

        .dropdown-menu {
            border-radius: 12px;
            padding: 8px 0;
            z-index: 3000;
        }

        @@media (min-width: 992px) {
            .dropdown:hover > .dropdown-menu {
                display: block;
            }
        }

        /* ===== MOBILE ===== */
        @@media (max-width: 768px) {
            .top-row {
                flex-direction: column;
                gap: 12px;
            }

            .search-bar {
                width: 100%;
            }

                .search-bar input {
                    width: 100%;
                }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="frame"></div>

    <div class="page">
        <header class="topbar">

            <!-- ===== TẦNG TRÊN ===== -->
            <div class="top-row">
                <div class="avatar">
                    <img src="~/images/nen_home.png" alt="avatar" />
                </div>

                <form class="search-bar" action="/Product/Search" method="get">
                    <input type="text" name="query" placeholder="Tìm món ăn..."
                           value="@Context.Request.Query["query"]" />
                    <button type="submit">
                        🔍 Tìm
                    </button>
                </form>
            </div>

            <!-- ===== TẦNG DƯỚI ===== -->
            <nav class="menu">
                <a class="@(Context.Request.Path == "/" || Context.Request.Path.Value?.StartsWith("/Product/Index") == true ? "active" : "")" href="/Product/Index">HOME</a>
                <span class="sep">|</span>

                <a id="menuLink" href="/Product/Menu">MENU</a>
                <span class="sep">|</span>

                <a class="@(Context.Request.Path.Value?.StartsWith("/Cart") == true ? "active" : "")" href="/Cart/Index">CART</a>
                <span id="cartBadge" class="badge rounded-pill text-bg-dark">0</span>
                <span class="sep">|</span>

                <a class="@(Context.Request.Path.Value?.StartsWith("/Cart/OrderHistory") == true ? "active" : "")" href="/Cart/OrderHistory">ORDER HISTORY</a>
                <span class="sep">|</span>

                <a class="@(Context.Request.Path.Value?.StartsWith("/Contact") == true ? "active" : "")" href="/Contact">CONTACT</a>
                <span class="sep">|</span>

                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="/Identity/Account/Manage">@User.Identity?.Name</a>
                    <span class="sep">|</span>
                    <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Product")" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0">LOGOUT</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                    <span class="sep">|</span>
                    <a asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
                }

                <div class="dropdown">
                    <a class="dropdown-toggle" data-bs-toggle="dropdown">QUẢN LÝ</a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li><a class="dropdown-item" href="/Suppliers/Index">🏭 Nhà cung cấp</a></li>
                        <li><a class="dropdown-item" href="/Product/QL_SP">📦 Sản phẩm</a></li>
                        <li><a class="dropdown-item" href="/PriceManagement/Index">📊 Giá </a></li>
                        <li><a class="dropdown-item" href="/PurchaseOrders/Index">📝 Đơn mua</a></li>
                        
                        <li><a class="dropdown-item" href="/Inventory/Index">📊 Tồn kho</a></li>
                        <li><a class="dropdown-item" href="/Inventory/Logs">📜 Lịch sử kho</a></li>
                    </ul>
                </div>
            </nav>
        </header>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
              (function () {
          const vueUrl = "http://localhost:5173/menu";

          // thử load Vue bằng fetch nhẹ
          fetch(vueUrl, { method: "HEAD", mode: "no-cors" })
            .then(() => {
              // nếu không throw → ưu tiên Vue
              document.getElementById("menuLink").href = vueUrl;
            })
            .catch(() => {
              // fail → giữ nguyên link MVC
              console.warn("Vue not available, fallback to MVC");
            });
        })();
        async function refreshCartBadge() {
            try {
                const res = await fetch('/Cart/Count', { cache: 'no-store' });
                if (!res.ok) return;
                const data = await res.json();
                document.getElementById('cartBadge').textContent = data.totalQty ?? 0;
            } catch { }
        }

        document.addEventListener('DOMContentLoaded', refreshCartBadge);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
