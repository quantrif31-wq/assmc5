@using Microsoft.AspNetCore.Identity
@using Lab4.Models
@using lab4.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var title = ViewData["Title"] as string ?? "Lab4";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --bgTop: #f4f0e6;
            --bgBottom: #e7efe9;
            --ink: #2c2c2c;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
            color: var(--ink);
            background: radial-gradient(1200px 520px at 50% -140px, rgba(255,255,255,.92), rgba(255,255,255,0) 62%), linear-gradient(180deg, var(--bgTop) 0 40%, var(--bgBottom) 40% 100%);
            overflow-x: hidden;
        }

        /* FRAME */
        .frame {
            position: fixed;
            inset: 18px;
            border-radius: 18px;
            pointer-events: none;
            z-index: 0;
            box-shadow: inset 0 0 0 1px rgba(0,0,0,.06), 0 26px 60px rgba(0,0,0,.08);
        }

        .page {
            min-height: 100vh;
            padding: 26px 0 40px;
            position: relative;
            z-index: 1;
        }

        /* ================= TOPBAR ================= */
        .topbar {
            width: min(1100px, calc(100% - 64px));
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        /* ===== TẦNG TRÊN ===== */
        .top-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .avatar {
            width: 46px;
            height: 46px;
            border-radius: 50%;
            overflow: hidden;
            background: #fff;
            border: 2px solid rgba(255,255,255,.7);
            box-shadow: 0 10px 18px rgba(0,0,0,.12);
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .search-bar {
            display: flex;
            align-items: center;
            gap: 8px;
            background: rgba(255,255,255,.95);
            border: 1px solid rgba(0,0,0,.12);
            border-radius: 999px;
            padding: 8px 14px;
            box-shadow: 0 8px 20px rgba(0,0,0,.10);
        }

            .search-bar input {
                border: none;
                outline: none;
                background: transparent;
                width: 220px;
                font-size: 13px;
                color: var(--ink);
            }

            .search-bar button {
                border: none;
                background: rgba(0,0,0,.65);
                color: #fff;
                padding: 6px 14px;
                border-radius: 999px;
                font-size: 12px;
                font-weight: 600;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 6px;
            }

                .search-bar button:hover {
                    background: rgba(0,0,0,.85);
                }

        /* ===== MENU ===== */
        .menu {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 18px;
            padding: 12px 0;
            border-bottom: 1px solid rgba(0,0,0,.18);
            flex-wrap: wrap;
        }

            .menu a,
            .menu button {
                text-decoration: none;
                background: none;
                border: none;
                color: rgba(0,0,0,.48);
                letter-spacing: .09em;
                font-size: 13px;
            }

                .menu a.active {
                    color: rgba(0,0,0,.85);
                    font-weight: 700;
                }

            .menu .sep {
                color: rgba(0,0,0,.25);
            }

        .dropdown-menu {
            border-radius: 12px;
            padding: 8px 0;
            z-index: 3000;
        }

        @@media (min-width: 992px) {
            .dropdown:hover > .dropdown-menu {
                display: block;
            }
        }

        /* ===== MOBILE ===== */
        @@media (max-width: 768px) {
            .top-row {
                flex-direction: column;
                gap: 12px;
            }

            .search-bar {
                width: 100%;
            }

                .search-bar input {
                    width: 100%;
                }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="frame"></div>

    <div class="page">
        <header class="topbar">

            <!-- ===== TẦNG TRÊN ===== -->
            <div class="top-row">
                <div class="avatar">
                    <img src="~/images/nen_home.png" alt="avatar" />
                </div>

                <form class="search-bar" action="/Product/Search" method="get">
                    <input type="text" name="query" placeholder="Tìm món ăn..."
                           value="@Context.Request.Query["query"]" />
                    <button type="submit">
                        🔍 Tìm
                    </button>
                </form>
            </div>

            <!-- ===== TẦNG DƯỚI ===== -->
            <nav class="menu">

                <!-- PUBLIC -->
                <a class="@(Context.Request.Path == "/" || Context.Request.Path.Value?.StartsWith("/Product/Index") == true ? "active" : "")"
                   href="/Product/Index">HOME</a>
                <span class="sep">|</span>

                <a class="@(Context.Request.Path.Value?.StartsWith("/Product/Menu") == true ? "active" : "")"
                   href="/Product/Menu">MENU</a>
                <span class="sep">|</span>

                <a class="@(Context.Request.Path.Value?.StartsWith("/Contact") == true ? "active" : "")"
                   href="/Contact">CONTACT</a>
                <span class="sep">|</span>

                
                <!-- CART – USER LOGIN -->
                @*  @if (User.Identity != null && User.Identity.IsAuthenticated) *@
                {
                    <a class="@(Context.Request.Path.Value?.StartsWith("/Cart") == true ? "active" : "")"
                       href="/Cart/Index">CART</a>
                    <span id="cartBadge" class="badge rounded-pill text-bg-dark">0</span>
                    <span class="sep">|</span>

                    <a class="@(Context.Request.Path.Value?.StartsWith("/Cart/OrderHistory") == true ? "active" : "")"
                       href="/Cart/OrderHistory">ORDER HISTORY</a>
                    <span class="sep">|</span>
                }


                <!-- LOGIN / LOGOUT -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="/Identity/Account/Manage">@User.Identity?.Name</a>
                    <span class="sep">|</span>

                    <form class="d-inline"
                          asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Product")"
                          method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0">LOGOUT</button>
                    </form>
                    <span class="sep">|</span>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                    <span class="sep">|</span>
                    <a asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
                    <span class="sep">|</span>
                }


                <!-- QUẢN LÝ – CÓ ÍT NHẤT 1 QUYỀN -->
                @if (User.Identity != null && User.Identity.IsAuthenticated &&
                                (
                                User.HasClaim("Permission", "Admin.Access") ||
                                User.HasClaim("Permission", "Product.Create") ||
                                User.HasClaim("Permission", "Order.Manage") ||
                                User.HasClaim("Permission", "Inventory.Manage")
                                ))
                {
                    <div class="dropdown d-inline">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown">QUẢN LÝ</a>

                        <ul class="dropdown-menu dropdown-menu-end shadow">

                            @* ADMIN *@
                            @if (User.HasClaim("Permission", "Admin.Access"))
                            {
                                <li><a class="dropdown-item" href="/Reports/Index">📊 Báo cáo</a></li>
                                <li><a class="dropdown-item" href="/Suppliers/Index">🏭 Nhà cung cấp</a></li>
                                <li><a class="dropdown-item" href="/Admin/Index">👑 Quản trị hệ thống</a></li>
                            }

                            @* PRODUCT *@
                            @if (User.HasClaim("Permission", "Product.Create"))
                            {
                                <li><a class="dropdown-item" href="/Product/QL_SP">📦 Sản phẩm</a></li>
                                <li><a class="dropdown-item" href="/PriceManagement/Index">💲 Giá</a></li>
                            }

                            @* ORDER *@
                            @if (User.HasClaim("Permission", "Order.Manage"))
                            {
                                <li><a class="dropdown-item" href="/Orders/Index">📝 Đơn bán</a></li>
                                <li><a class="dropdown-item" href="/PurchaseOrders/Index">🧾 Đơn mua</a></li>
                            }

                            @* INVENTORY *@
                            @if (User.HasClaim("Permission", "Inventory.Manage"))
                            {
                                <li><a class="dropdown-item" href="/Inventory/Index">📊 Tồn kho</a></li>
                                <li><a class="dropdown-item" href="/Inventory/Logs">📜 Lịch sử kho</a></li>
                            }

                        </ul>
                    </div>
                }

            </nav>
        </header>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
              (function () {
          const vueUrl = "http://localhost:5173/menu";

          // thử load Vue bằng fetch nhẹ
          fetch(vueUrl, { method: "HEAD", mode: "no-cors" })
            .then(() => {
              // nếu không throw → ưu tiên Vue
              document.getElementById("menuLink").href = vueUrl;
            })
            .catch(() => {
              // fail → giữ nguyên link MVC
              console.warn("Vue not available, fallback to MVC");
            });
        })();
        async function refreshCartBadge() {
            try {
                const res = await fetch('/Cart/Count', { cache: 'no-store' });
                if (!res.ok) return;
                const data = await res.json();
                document.getElementById('cartBadge').textContent = data.totalQty ?? 0;
            } catch { }
        }

        document.addEventListener('DOMContentLoaded', refreshCartBadge);
    </script>
    <!-- CHATBOT WIDGET -->
    <style>
        :root {
            --cow-primary: #6C4CF1;
            --cow-secondary: #A78BFA;
            --cow-bg: linear-gradient(135deg, #eef2ff, #f0fdfa);
            --cow-dark: #1f1f1f;
        }

        /* Floating button */
        #chat-toggle {
            position: fixed;
            bottom: 25px;
            right: 25px;
            width: 65px;
            height: 65px;
            border-radius: 50%;
            border: none;
            cursor: pointer;
            font-size: 26px;
            color: white;
            background: linear-gradient(135deg, var(--cow-primary), var(--cow-secondary));
            box-shadow: 0 8px 25px rgba(108, 76, 241, 0.5);
            transition: all 0.3s ease;
            z-index: 9999;
        }

            #chat-toggle:hover {
                transform: scale(1.1) rotate(8deg);
            }

        /* Chat box */
        #chat-box {
            position: fixed;
            bottom: 110px;
            right: 25px;
            width: 370px;
            height: 520px;
            background: rgba(255,255,255,0.7);
            backdrop-filter: blur(18px);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
            display: none;
            flex-direction: column;
            overflow: hidden;
            animation: fadeInUp 0.4s ease;
            z-index: 9999;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .chat-header {
            background: linear-gradient(135deg, var(--cow-primary), var(--cow-secondary));
            color: white;
            padding: 16px;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .chat-header span {
                font-size: 14px;
                opacity: 0.85;
            }

        /* Messages */
        #chat-messages {
            flex: 1;
            padding: 15px;
            overflow-y: auto;
            background: var(--cow-bg);
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .msg {
            max-width: 75%;
            padding: 10px 14px;
            border-radius: 18px;
            font-size: 14px;
            animation: fadeIn 0.3s ease;
        }

        .user-msg {
            align-self: flex-end;
            background: var(--cow-primary);
            color: white;
            border-bottom-right-radius: 4px;
        }

        .bot-msg {
            align-self: flex-start;
            background: white;
            color: var(--cow-dark);
            border-bottom-left-radius: 4px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        /* Input */
        #chat-input {
            display: flex;
            border-top: 1px solid rgba(0,0,0,0.05);
            background: white;
        }

            #chat-input input {
                flex: 1;
                border: none;
                padding: 14px;
                outline: none;
                font-size: 14px;
            }

            #chat-input button {
                border: none;
                background: var(--cow-primary);
                color: white;
                padding: 0 18px;
                font-weight: 600;
                transition: 0.3s;
            }

                #chat-input button:hover {
                    background: var(--cow-secondary);
                }

        /* Scrollbar đẹp */
        #chat-messages::-webkit-scrollbar {
            width: 6px;
        }

        #chat-messages::-webkit-scrollbar-thumb {
            background: rgba(0,0,0,0.2);
            border-radius: 10px;
        }
    </style>

    <button id="chat-toggle">🐄</button>

    <div id="chat-box">
        <div class="chat-header">
            🐄 Bò Biết Bay AI
            <span>Online • Trợ lý thông minh</span>
        </div>

        <div id="chat-messages">
            <div class="msg bot-msg">
                Xin chào! 🐄✨
                Tôi là Bò Biết Bay – trợ lý của bạn hôm nay!
            </div>
        </div>

        <div id="chat-input">
            <input id="chat-text" placeholder="Hỏi Bò điều gì đó..." />
            <button onclick="sendChat()">Gửi</button>
        </div>
    </div>

    <script>
        const toggle = document.getElementById("chat-toggle");
        const box = document.getElementById("chat-box");
        const messages = document.getElementById("chat-messages");

        toggle.onclick = () => {
            box.style.display =
                box.style.display === "flex" ? "none" : "flex";
        };

                async function sendChat() {
            const input = document.getElementById("chat-text");
            const msg = input.value.trim();
            if (!msg) return;

            messages.innerHTML += `<div class="msg user-msg">${msg}</div>`;
            input.value = "";

            const loading = document.createElement("div");
            loading.className = "msg bot-msg";
            loading.innerText = "Bò đang bay... 🐄💨";
            messages.appendChild(loading);

            try {
                const res = await fetch("/Chat/Ask", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ message: msg })
                });

                if (!res.ok)
                    throw new Error("Server error " + res.status);

                const data = await res.json();

                loading.remove();
                messages.innerHTML += `<div class="msg bot-msg">${data.reply}</div>`;
            }
            catch (err) {
                loading.innerText = "Lỗi kết nối server 😢";
                console.error(err);
            }

            messages.scrollTop = messages.scrollHeight;
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
