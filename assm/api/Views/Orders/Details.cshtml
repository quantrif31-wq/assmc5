@model Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<style>
    /* Container chính phong cách kính mờ */
    .order-detail-container {
        width: min(1000px, calc(100% - 40px));
        margin: 40px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.45);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(0,0,0,0.1);
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    .order-header h2 {
        font-weight: 800;
        letter-spacing: -1px;
        margin: 0;
    }

    /* Grid thông tin khách hàng */
    .customer-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .info-item {
        background: rgba(255, 255, 255, 0.3);
        padding: 15px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.2);
    }

    .info-label {
        display: block;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        color: rgba(0,0,0,0.4);
        margin-bottom: 5px;
    }

    .info-value {
        font-weight: 700;
        color: var(--ink);
    }

    /* Bảng sản phẩm tinh tế */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
        margin-bottom: 40px;
    }

    .glass-table th {
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        color: rgba(0,0,0,0.4);
        padding: 10px 20px;
    }

    .glass-table td {
        background: rgba(255, 255, 255, 0.5);
        padding: 15px 20px;
        font-weight: 600;
        border: none;
    }

    .glass-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Form cập nhật trạng thái */
    .update-status-box {
        background: rgba(0, 0, 0, 0.03);
        padding: 25px;
        border-radius: 18px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .glass-select {
        background: rgba(255,255,255,0.7) !important;
        border: 1px solid rgba(255,255,255,0.5) !important;
        border-radius: 10px !important;
        font-weight: 700 !important;
        padding: 10px !important;
    }

    .btn-update {
        background: var(--ink, #2c2c2c);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-update:hover {
        background: #000;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 8px;
        font-weight: 800;
        font-size: 12px;
    }
</style>

<div class="order-detail-container">
    <div class="order-header">
        <h2>📦 Đơn hàng #@Model.Id</h2>
        <span class="status-badge bg-warning text-dark">@Model.Status</span>
    </div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mb-4">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mb-4">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <div class="card p-3 mb-3 shadow-sm border-0">
            <h5 class="fw-bold mb-3"><i class="bi bi-person-lines-fill"></i> Khách Hàng</h5>
            <p class="mb-1"><strong>Tên:</strong> @Model.FullName</p>
            <p class="mb-1"><strong>SĐT:</strong> @Model.Phone</p>
            <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
            <p class="mb-1"><strong>Địa chỉ:</strong> @Model.Address, @Model.City</p>
            <p class="mb-1"><strong>Quận/Huyện:</strong> @(Model.District ?? "—")</p>
            <p class="mb-0"><strong>Ghi chú:</strong> @Model.Note</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-3 mb-3 shadow-sm border-0">
            <h5 class="fw-bold mb-3"><i class="bi bi-info-circle"></i> Đơn Hàng</h5>
            <p class="mb-1"><strong>Mã đơn:</strong> #@Model.Id</p>
            <p class="mb-1"><strong>Ngày đặt:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
            <p class="mb-1"><strong>Thanh toán:</strong> @Model.PaymentMethod</p>
            
            <p class="mb-1">
                <strong>VNPAY Ref:</strong> 
                <span class="text-muted">@(string.IsNullOrEmpty(Model.VnpTxnRef) ? "N/A" : Model.VnpTxnRef)</span>
            </p>
            <p class="mb-0">
                <strong>VNPAY Mã GD:</strong> 
                <span class="text-muted">@(string.IsNullOrEmpty(Model.VnpTransactionNo) ? "N/A" : Model.VnpTransactionNo)</span>
            </p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-3 mb-3 shadow-sm border-0">
            <h5 class="fw-bold mb-3"><i class="bi bi-gear"></i> Trạng Thái</h5>
            
            @if (User.IsInRole("StoreManager") || User.IsInRole("KitchenStaff") 
                || User.HasClaim("Permission", "Order.Manage") || User.HasClaim("Permission", "Admin.Access"))
            {
                @* Kiểm tra Admin (StoreManager hoặc Admin.Access) *@
                var isAdmin = User.IsInRole("StoreManager") || User.HasClaim("Permission", "Admin.Access");

                <form asp-action="UpdateStatus" method="post" class="d-flex flex-column gap-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <select name="status" class="form-select border-2" required>

                        @if (isAdmin)
                        {
                            @* ADMIN: Hiển thị TẤT CẢ trạng thái, cho phép chuyển tự do *@
                            <option value="" disabled selected>— Chọn trạng thái —</option>
                            @foreach (var s in new[] { "Pending", "Preparing", "Delivering", "Done", "Cancelled" })
                            {
                                if (s != Model.Status)
                                {
                                    <option value="@s">@s</option>
                                }
                            }
                        }
                        else
                        {
                            @* STAFF: Chỉ hiển thị trạng thái TIẾN LÊN *@
                            if (Model.Status == "Pending")
                            {
                                <option value="Pending" selected disabled>Đang chờ (Pending)</option>
                                <option value="Preparing"> Chuẩn bị & Nấu (Preparing)</option>
                                <option value="Cancelled"> Hủy đơn hàng (Cancelled)</option>
                            }
                            else if (Model.Status == "Preparing")
                            {
                                <option value="Preparing" selected disabled>Đang chuẩn bị (Preparing)</option>
                                <option value="Delivering"> Bắt đầu giao (Delivering)</option>
                            }
                            else if (Model.Status == "Delivering")
                            {
                                <option value="Delivering" selected disabled>Đang giao (Delivering)</option>
                                <option value="Done"> Hoàn thành (Done)</option>
                            }
                            else if (Model.Status == "Done")
                            {
                                <option value="Done" selected disabled>Đã hoàn thành</option>
                            }
                            else if (Model.Status == "Cancelled")
                            {
                                <option value="Cancelled" selected disabled>Đã hủy</option>
                            }
                        }
                    </select>

                    @if (isAdmin)
                    {
                        <button type="submit" class="btn btn-primary fw-bold">
                            Cập Nhật (Admin)
                        </button>
                        <small class="text-muted mt-1">*Admin có thể chuyển trạng thái tự do.</small>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary fw-bold"
                                @(Model.Status == "Done" || Model.Status == "Cancelled" ? "disabled" : "")>
                            Cập Nhật
                        </button>
                        <small class="text-muted mt-1">*Chỉ có thể đổi sang bước tiếp theo, không thể lùi lại.</small>
                    }
                </form>
            }
            else
            {
                <div class="alert alert-secondary mb-0">
                    <span class="fw-bold d-block mb-1">Trạng thái hiện tại:</span>
                    <span class="badge bg-primary fs-6">@Model.Status</span>
                    <small class="d-block text-muted mt-2">*Tài khoản không có quyền cập nhật trạng thái.</small>
                </div>
            }
        </div>
    </div>
</div>

    <h4 class="info-label" style="margin-left: 5px; font-size: 14px;">🛒 Chi tiết sản phẩm</h4>
    <table class="glass-table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th class="text-end">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td style="font-weight: 700;">@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("N0") đ</td>
                    <td class="text-end" style="color: #000;">@item.LineTotal.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>

    @* ===== TỔNG TIỀN CHI TIẾT ===== *@
    <div style="max-width: 350px; margin-left: auto; margin-top: 16px; margin-bottom: 20px;">
        <div style="display: flex; justify-content: space-between; padding: 6px 0; font-size: 14px; color: rgba(0,0,0,.6);">
            <span>Tạm tính</span>
            <span>@string.Format("{0:N0} ₫", Model.Subtotal)</span>
        </div>
        @if (Model.Tax > 0)
        {
            <div style="display: flex; justify-content: space-between; padding: 6px 0; font-size: 14px; color: rgba(0,0,0,.6);">
                <span>Thuế</span>
                <span>@string.Format("{0:N0} ₫", Model.Tax)</span>
            </div>
        }
        <div style="display: flex; justify-content: space-between; padding: 6px 0; font-size: 14px; color: rgba(0,0,0,.6);">
            <span>Phí vận chuyển (@(Model.District ?? "—"))</span>
            <span>@string.Format("{0:N0} ₫", Model.ShippingFee)</span>
        </div>
        <div style="border-top: 2px solid rgba(0,0,0,.2); margin-top: 6px; padding-top: 8px; display: flex; justify-content: space-between; font-size: 17px; font-weight: 800;">
            <span>Tổng cộng</span>
            <span>@string.Format("{0:N0} ₫", Model.Total)</span>
        </div>
    </div>

</div>