@model Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<style>
    /* Container chính phong cách kính mờ */
    .order-detail-container {
        width: min(1000px, calc(100% - 40px));
        margin: 40px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.45);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(0,0,0,0.1);
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    .order-header h2 {
        font-weight: 800;
        letter-spacing: -1px;
        margin: 0;
    }

    /* Grid thông tin khách hàng */
    .customer-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .info-item {
        background: rgba(255, 255, 255, 0.3);
        padding: 15px;
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.2);
    }

    .info-label {
        display: block;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        color: rgba(0,0,0,0.4);
        margin-bottom: 5px;
    }

    .info-value {
        font-weight: 700;
        color: var(--ink);
    }

    /* Bảng sản phẩm tinh tế */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
        margin-bottom: 40px;
    }

    .glass-table th {
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        color: rgba(0,0,0,0.4);
        padding: 10px 20px;
    }

    .glass-table td {
        background: rgba(255, 255, 255, 0.5);
        padding: 15px 20px;
        font-weight: 600;
        border: none;
    }

    .glass-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Form cập nhật trạng thái */
    .update-status-box {
        background: rgba(0, 0, 0, 0.03);
        padding: 25px;
        border-radius: 18px;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .glass-select {
        background: rgba(255,255,255,0.7) !important;
        border: 1px solid rgba(255,255,255,0.5) !important;
        border-radius: 10px !important;
        font-weight: 700 !important;
        padding: 10px !important;
    }

    .btn-update {
        background: var(--ink, #2c2c2c);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-update:hover {
        background: #000;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 8px;
        font-weight: 800;
        font-size: 12px;
    }
</style>

<div class="order-detail-container">
    <div class="order-header">
        <h2>📦 Đơn hàng #@Model.Id</h2>
        <span class="status-badge bg-warning text-dark">@Model.Status</span>
    </div>

    <div class="customer-info-grid">
        <div class="info-item">
            <span class="info-label">Khách hàng</span>
            <span class="info-value">@Model.FullName</span>
        </div>
        <div class="info-item">
            <span class="info-label">Điện thoại</span>
            <span class="info-value">@Model.Phone</span>
        </div>
        <div class="info-item" style="grid-column: span 2;">
            <span class="info-label">Địa chỉ giao hàng</span>
            <span class="info-value">@Model.Address</span>
        </div>
    </div>

    <h4 class="info-label" style="margin-left: 5px; font-size: 14px;">🛒 Chi tiết sản phẩm</h4>
    <table class="glass-table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th class="text-end">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td style="font-weight: 700;">@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("N0") đ</td>
                    <td class="text-end" style="color: #000;">@item.LineTotal.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="update-status-box">
        <h4 class="info-label" style="margin-bottom: 15px;">⚙️ Quản lý trạng thái đơn hàng</h4>
        <form asp-action="UpdateStatus" method="post" class="d-flex gap-3 align-items-center">
            <input type="hidden" name="id" value="@Model.Id" />

            <select name="status" class="form-select glass-select w-50">
                <option value="Pending" selected="@("Pending" == Model.Status)">Pending (Chờ xử lý)</option>
                <option value="Confirmed" selected="@("Confirmed" == Model.Status)">Confirmed (Đã xác nhận)</option>
                <option value="Shipping" selected="@("Shipping" == Model.Status)">Shipping (Đang giao)</option>
                <option value="Completed" selected="@("Completed" == Model.Status)">Completed (Hoàn tất)</option>
                <option value="Cancelled" selected="@("Cancelled" == Model.Status)">Cancelled (Đã hủy)</option>
            </select>

            <button type="submit" class="btn-update">Cập nhật đơn</button>
        </form>
    </div>
</div>