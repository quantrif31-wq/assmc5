@model IEnumerable<Lab4.Models.Product>

@{
    ViewData["Title"] = "Quản lý danh mục";
}

<style>
    /* 1. Bao quanh toàn bộ nội dung - Tăng độ bo góc giống ảnh mẫu */
    .admin-list-wrap {
        width: min(1200px, calc(100% - 40px));
        margin: 40px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.45);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 32px; /* Tăng độ bo tròn mềm mại */
        border: 1px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    /* 2. Phần tiêu đề mới giống ảnh mẫu */
    .header-section {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
    }

    .header-icon {
        font-size: 26px; /* Kích thước icon hộp quà */
        display: flex;
        align-items: center;
    }

    .admin-title {
        font-weight: 850; /* Độ đậm cực cao như trong ảnh */
        font-size: 28px;
        color: #2c2c2c;
        margin: 0;
        letter-spacing: -0.5px;
    }

    /* 3. Nút Thêm mới sản phẩm */
    .btn-create-ink {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #000;
        color: #fff;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 13px;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-bottom: 25px;
    }

        .btn-create-ink:hover {
            background: #333;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            color: #fff;
        }

    /* 4. Cấu trúc Bảng Kính (Glass Table) */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
    }

        .glass-table thead th {
            border: none;
            color: rgba(0, 0, 0, 0.4);
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 10px 20px;
        }

        .glass-table tbody tr {
            background: rgba(255, 255, 255, 0.6);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .glass-table tbody tr:hover {
                background: rgba(255, 255, 255, 0.9);
                transform: translateY(-3px) scale(1.005);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
            }

        .glass-table td {
            padding: 18px 20px;
            border: none;
            vertical-align: middle;
            font-weight: 600;
            color: #2c2c2c;
        }

            .glass-table td:first-child {
                border-radius: 15px 0 0 15px;
            }

            .glass-table td:last-child {
                border-radius: 0 15px 15px 0;
            }

    /* 5. Badge trạng thái */
    .badge-status {
        font-size: 10px;
        padding: 5px 12px;
        border-radius: 6px;
        font-weight: 800;
        text-transform: uppercase;
    }

    .bg-active {
        background: rgba(46, 125, 50, 0.1);
        color: #2e7d32;
    }

    .bg-hidden {
        background: rgba(0, 0, 0, 0.05);
        color: #757575;
    }

    /* 6. Nút hành động */
    .action-link {
        text-decoration: none;
        font-size: 12px;
        font-weight: 700;
        color: #2c2c2c;
        padding: 8px 14px;
        border-radius: 8px;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: transparent;
        cursor: pointer;
        border: none;
    }

        .action-link:hover {
            background: rgba(0, 0, 0, 0.05);
        }

    .btn-toggle-dark {
        background: #000;
        color: #fff;
    }

        .btn-toggle-dark:hover {
            background: #333;
            color: #fff;
        }
</style>

<div class="admin-list-wrap">
    <div class="header-section">
        <span class="header-icon">📦</span>
        <h2 class="admin-title">Quản lý sản phẩm</h2>
    </div>

    <a asp-action="Create" class="btn-create-ink">
        <span>➕</span> THÊM SẢN PHẨM MỚI
    </a>

    <div class="table-responsive">
        <table class="glass-table">
            <thead>
                <tr>
                    <th>Thông tin sản phẩm</th>
                    <th>Đơn giá</th>
                    <th>Thứ tự</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div style="font-weight: 700; font-size: 15px;">@item.Name</div>
                            <div style="font-size: 11px; opacity: 0.5; margin-top: 2px;">Mã: #@item.Id</div>
                        </td>
                        <td style="font-weight: 800; color: #1a1a1a;">
                            @item.PriceText
                        </td>
                        <td style="opacity: 0.7;">
                            <span style="font-size: 12px;">Thứ tự:</span> @item.SortOrder
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge-status bg-active">● Đang hiển thị</span>
                            }
                            else
                            {
                                <span class="badge-status bg-hidden">○ Đang ẩn</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">
                                ✏️ <span>SỬA</span>
                            </a>

                            <span style="opacity: 0.15; margin: 0 8px;">|</span>

                            <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="action-link @(item.IsActive ? "" : "btn-toggle-dark")">
                                    @(item.IsActive ? "🚫 ẨN" : "👁️ HIỆN")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<svg class="sparkle" viewBox="0 0 64 64" style="position: fixed; right: 40px; bottom: 40px; width: 60px; height: 60px; opacity: .08; pointer-events: none;">
    <path fill="#000" d="M32 6l4.2 16.4L52 26.7 35.8 31 32 47 28.2 31 12 26.7l15.8-4.3z" />
</svg>