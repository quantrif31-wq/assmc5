@model Lab4.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<style>
    /* Wrapper bao quanh để căn giữa theo layout trang chủ */
    .edit-product-wrap {
        width: min(800px, calc(100% - 40px));
        margin: 40px auto;
        position: relative;
        z-index: 1;
    }

    /* Thẻ kính mờ chính */
    .glass-edit-card {
        padding: 40px;
        background: rgba(255, 255, 255, 0.45);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.08);
    }

    /* Tiêu đề chữ rỗng theo phong cách WELCOME của trang Home */
    .glass-title {
        text-align: center;
        font-weight: 900;
        letter-spacing: .1em;
        font-size: 32px;
        text-transform: uppercase;
        color: transparent;
        -webkit-text-stroke: 1.5px rgba(0,0,0,.35);
        margin-bottom: 35px;
    }

    /* Nhóm nút bấm đồng bộ */
    .btn-group-modern {
        display: flex;
        gap: 12px;
        margin-top: 30px;
    }

    .btn-update-ink {
        flex: 2;
        border: 1px solid rgba(0,0,0,.40);
        background: rgba(0,0,0,.75);
        color: #fff;
        padding: 12px 30px;
        border-radius: 6px;
        font-weight: 800;
        letter-spacing: .08em;
        font-size: 13px;
        text-transform: uppercase;
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .btn-update-ink:hover {
        background: #000;
        transform: translateY(-2px);
        box-shadow: 0 10px 18px rgba(0,0,0,.18);
    }

    .btn-back-glass {
        flex: 1;
        display: inline-block;
        text-align: center;
        text-decoration: none;
        border: 1px solid rgba(0,0,0,0.1);
        background: rgba(255,255,255,0.4);
        color: rgba(0,0,0,0.6);
        padding: 12px 20px;
        border-radius: 6px;
        font-weight: 700;
        font-size: 12px;
        text-transform: uppercase;
        transition: all 0.2s;
    }

    .btn-back-glass:hover {
        background: rgba(0,0,0,0.05);
        color: #000;
    }
</style>

<div class="edit-product-wrap">
    <h2 class="glass-title">Edit Product</h2>

    <div class="glass-edit-card">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            
            @* Thừa hưởng form đã được style glassmorphism từ _Form.cshtml *@
            <partial name="_Form" />

            <div class="btn-group-modern">
                <button type="submit" class="btn-update-ink">
                    💾 Cập nhật ngay
                </button>
                <a asp-action="Index" class="btn-back-glass">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@* Sparkle trang trí ở góc để nhất quán với giao diện chung *@
<svg class="sparkle" viewBox="0 0 64 64" style="position: fixed; right: 40px; bottom: 40px; width: 60px; height: 60px; opacity: .1; pointer-events: none;">
    <path fill="var(--ink)" d="M32 6l4.2 16.4L52 26.7 35.8 31 32 47 28.2 31 12 26.7l15.8-4.3z" />
</svg>