@using lab4.Models
@model List<ApplicationUser>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<style>
    .admin-container {
        padding: 30px;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        box-shadow: 0 26px 60px rgba(0,0,0,.08);
        border: 1px solid rgba(0,0,0,.06);
        margin-top: 20px;
    }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .admin-header h2 {
        font-weight: 700;
        color: #222;
        margin: 0;
        font-size: 1.5rem;
    }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .custom-table thead th {
        background: transparent;
        border: none;
        color: #888;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 1px;
        padding: 10px 20px;
    }

    .custom-table tbody tr {
        background: #fff;
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 12px;
    }

    .custom-table tbody tr:hover {
        transform: scale(1.01);
        box-shadow: 0 5px 15px rgba(0,0,0,0.04);
    }

    .custom-table td {
        padding: 15px 20px;
        border: none;
        vertical-align: middle;
        color: #444;
        border-top: 1px solid #f8f8f8;
        border-bottom: 1px solid #f8f8f8;
    }

    .custom-table td:first-child {
        border-left: 1px solid #f8f8f8;
        border-radius: 12px 0 0 12px;
    }

    .custom-table td:last-child {
        border-right: 1px solid #f8f8f8;
        border-radius: 0 12px 12px 0;
    }

    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-active { background: #e6f7ed; color: #1a8a4d; }
    .status-locked { background: #ffebeb; color: #d93025; }

    .btn-action {
        border-radius: 8px;
        font-weight: 600;
        padding: 6px 12px;
        font-size: 0.8rem;
        transition: all 0.2s;
        border: none;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
    }

    .btn-edit { background: #f0f0f0; color: #333; }
    .btn-edit:hover { background: #e5e5e5; color: #333; }
    .btn-lock { background: #333; color: #fff; }
    .btn-lock:hover { background: #000; color: #fff; }
    .btn-unlock { background: #fff; color: #333; border: 1px solid #ddd; }
    .btn-delete { background: #fff1f0; color: #d93025; border: 1px solid #fecdd3; }
    .btn-delete:hover { background: #d93025; color: #fff; }
    .btn-perm { background: #eef2ff; color: #4338ca; border: 1px solid #c7d2fe; }
    .btn-perm:hover { background: #4338ca; color: #fff; }

    .toast-msg {
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 14px 24px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.9rem;
        z-index: 9999;
        animation: slideIn 0.3s ease, fadeOut 0.3s ease 2.7s forwards;
        box-shadow: 0 8px 24px rgba(0,0,0,.12);
    }
    .toast-success { background: #e6f7ed; color: #1a8a4d; border: 1px solid #a7f3d0; }
    .toast-error { background: #ffebeb; color: #d93025; border: 1px solid #fecdd3; }

    @@keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @@keyframes fadeOut { to { opacity: 0; transform: translateY(-10px); } }
</style>

@if (TempData["Success"] != null)
{
    <div class="toast-msg toast-success">✅ @TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="toast-msg toast-error">❌ @TempData["Error"]</div>
}

<div class="admin-container">
    <div class="admin-header">
        <h2>👤 Quản lý tài khoản</h2>
        <span class="text-muted small">Tổng cộng: @Model.Count người dùng</span>
    </div>

    <table class="custom-table">
        <thead>
            <tr>
                <th>Tài khoản</th>
                <th>Họ tên</th>
                <th>Trạng thái</th>
                <th class="text-end">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var isLocked = user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.Now;

                <tr>
                    <td>
                        <div style="font-weight: 600;">@user.Email</div>
                        <div class="text-muted small">@user.PhoneNumber</div>
                    </td>
                    <td>
                        <span style="color: #555;">@(string.IsNullOrEmpty(user.FullName) ? "—" : user.FullName)</span>
                    </td>
                    <td>
                        @if (isLocked)
                        {
                            <span class="status-badge status-locked">🔒 Bị khóa</span>
                        }
                        else
                        {
                            <span class="status-badge status-active">✔ Hoạt động</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn-action btn-perm me-1" href="/Admin/Manage/@user.Id">
                            🔑 Quyền
                        </a>
                        <a class="btn-action btn-edit me-1" href="/Admin/Edit/@user.Id">
                            ✏️ Sửa
                        </a>
                        <form method="post" asp-action="ToggleLock" class="d-inline">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn-action @(isLocked ? "btn-unlock" : "btn-lock")">
                                @(isLocked ? "🔓 Mở" : "🔒 Khóa")
                            </button>
                        </form>
                        <form method="post" asp-action="Delete" class="d-inline"
                              onsubmit="return confirm('⚠️ Bạn có chắc muốn XOÁ tài khoản @user.Email?\nHành động này không thể hoàn tác!')">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn-action btn-delete ms-1">
                                🗑️ Xoá
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>