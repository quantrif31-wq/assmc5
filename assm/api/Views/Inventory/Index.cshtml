@model IEnumerable<Lab4.Models.Inventory>

@{
    ViewData["Title"] = "Quản lý tồn kho";
}

<style>
    /* Container chính phong cách Glassmorphism */
    .inventory-list-wrap {
        width: min(1200px, calc(100% - 40px));
        margin: 40px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.45);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .inventory-list-wrap h2 {
        font-weight: 800;
        letter-spacing: -1px;
        color: var(--ink, #2c2c2c);
        margin-bottom: 25px;
    }

    /* Tùy chỉnh bảng */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px; /* Tạo khoảng cách giữa các hàng */
    }

    .glass-table thead th {
        border: none;
        color: rgba(0, 0, 0, 0.4);
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 10px 20px;
    }

    .glass-table tbody tr {
        background: rgba(255, 255, 255, 0.6);
        transition: all 0.3s ease;
    }

    .glass-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.9);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.04);
    }

    .glass-table td {
        padding: 16px 20px;
        border: none;
        vertical-align: middle;
        font-weight: 600;
        color: var(--ink);
    }

    /* Bo góc cho hàng */
    .glass-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Badge phong cách mới */
    .glass-badge {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 700;
    }

    .bg-low { background: #ffebee; color: #c62828; }
    .bg-high { background: #e8f5e9; color: #2e7d32; }

    /* Button phong cách tối giản */
    .btn-glass {
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 12px;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.2s;
        display: inline-block;
        border: none;
    }

    .btn-set { background: var(--ink, #2c2c2c); color: #fff; }
    .btn-add { background: #fff; color: var(--ink); border: 1px solid rgba(0,0,0,0.1); }

    .btn-glass:hover {
        opacity: 0.9;
        transform: scale(1.05);
        color: #fff;
    }
    .btn-add:hover { background: #f8f8f8; color: #000; }

    .time-text {
        font-size: 12px;
        color: rgba(0, 0, 0, 0.4);
        font-weight: 500;
    }
</style>

<div class="inventory-list-wrap">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📦 Quản lý tồn kho</h2>
        <span class="time-text">Cập nhật lần cuối: @DateTime.Now.ToString("HH:mm")</span>
    </div>

    <table class="glass-table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Giá niêm yết</th>
                <th>Số lượng tồn</th>
                <th>Lần cuối cập nhật</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>
                        <div style="color: var(--ink); font-weight: 700;">@i.Product?.Name</div>
                        <div style="font-size: 11px; opacity: 0.5;">ID: #@i.Id</div>
                    </td>
                    <td>@i.Product?.PriceText</td>
                    <td>
                        <span class="glass-badge @(i.Quantity <= 5 ? "bg-low" : "bg-high")">
                            @i.Quantity đơn vị
                        </span>
                    </td>
                    <td class="time-text">@i.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@i.Id" class="btn-glass btn-set me-1">
                            Sửa
                        </a>
                        <a asp-action="AddStock" asp-route-id="@i.Id" class="btn-glass btn-add">
                            + Nhập
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


