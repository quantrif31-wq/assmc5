@using lab4.Models
@model IEnumerable<InventoryLog>

@{
    ViewData["Title"] = "Lịch sử biến động kho";
}

<style>
    /* Container chính phong cách Glassmorphism */
    .log-container {
        width: min(1200px, calc(100% - 40px));
        margin: 40px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.45);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .log-container h2 {
        font-weight: 800;
        letter-spacing: -1px;
        color: var(--ink, #2c2c2c);
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Bảng dữ liệu phong cách hàng nổi */
    .glass-log-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

    .glass-log-table thead th {
        border: none;
        color: rgba(0, 0, 0, 0.4);
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px 20px;
    }

    .glass-log-table tbody tr {
        background: rgba(255, 255, 255, 0.6);
        transition: all 0.2s ease;
    }

    .glass-log-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.9);
        transform: scale(1.005);
    }

    .glass-log-table td {
        padding: 16px 20px;
        border: none;
        vertical-align: middle;
        font-weight: 600;
        color: var(--ink);
    }

    /* Bo góc cho hàng */
    .glass-log-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-log-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Chỉ số thay đổi số lượng */
    .change-indicator {
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .change-up { color: #2e7d32; }
    .change-down { color: #d32f2f; }

    /* Nhãn loại hành động */
    .action-badge {
        font-size: 10px;
        font-weight: 800;
        text-transform: uppercase;
        padding: 4px 10px;
        border-radius: 20px;
        background: rgba(0, 0, 0, 0.05);
        color: rgba(0, 0, 0, 0.6);
    }

    .time-stamp {
        font-size: 13px;
        color: rgba(0, 0, 0, 0.4);
        font-weight: 500;
    }
</style>

<div class="log-container">
    <h2>📜 Lịch sử biến động kho</h2>

    <table class="glass-log-table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Thay đổi</th>
                <th>Tồn sau cùng</th>
                <th>Loại giao dịch</th>
                <th>Thời gian</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in Model)
            {
                var isPositive = l.QuantityChange > 0;
                <tr>
                    <td style="font-weight: 700;">@l.Product.Name</td>
                    <td>
                        <div class="change-indicator @(isPositive ? "change-up" : "change-down")">
                            @(isPositive ? "↑ +" : "↓ ")@l.QuantityChange
                        </div>
                    </td>
                    <td>
                        <span style="opacity: 0.8;">@l.QuantityAfter</span>
                    </td>
                    <td>
                        <span class="action-badge">@l.ActionType</span>
                    </td>
                    <td class="time-stamp">
                        @l.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
