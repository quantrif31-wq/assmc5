@using lab4.Models
@model Product

@{
    ViewData["Title"] = "Đổi giá bán";
}

<style>
    /* Container phong cách kính mờ */
    .glass-price-card {
        max-width: 600px;
        margin: 40px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .glass-price-card h2 {
        font-weight: 800;
        letter-spacing: -1px;
        color: var(--ink, #2c2c2c);
        margin-bottom: 30px;
        text-align: center;
    }

    /* Tùy chỉnh Label */
    .glass-label {
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        color: rgba(0, 0, 0, 0.45);
        margin-bottom: 8px;
        display: block;
    }

    /* Info Box cho dữ liệu chỉ đọc */
    .glass-info-static {
        background: rgba(255, 255, 255, 0.25);
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        font-weight: 700;
        color: var(--ink);
        margin-bottom: 20px;
    }

    /* Input và Textarea phong cách Glass */
    .glass-input {
        background: rgba(255, 255, 255, 0.5) !important;
        border: 1px solid rgba(255, 255, 255, 0.4) !important;
        border-radius: 12px !important;
        padding: 12px 16px !important;
        font-weight: 600;
        color: var(--ink) !important;
        transition: all 0.3s ease;
    }

    .glass-input:focus {
        background: rgba(255, 255, 255, 0.8) !important;
        border-color: rgba(255, 255, 255, 0.8) !important;
        box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.3) !important;
        outline: none;
    }

    .glass-input::placeholder {
        color: rgba(0,0,0,0.2);
    }

    /* Nhóm nút bấm */
    .glass-btn-group {
        display: flex;
        gap: 15px;
        margin-top: 35px;
    }

    .btn-glass-save {
        flex: 2;
        background: var(--ink, #2c2c2c);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-glass-save:hover {
        background: #000;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .btn-glass-back {
        flex: 1;
        background: rgba(0, 0, 0, 0.05);
        color: var(--ink);
        text-decoration: none;
        text-align: center;
        padding: 14px;
        border-radius: 12px;
        font-weight: 600;
        transition: 0.2s;
    }

    .btn-glass-back:hover {
        background: rgba(0, 0, 0, 0.1);
        color: #000;
    }
</style>

<div class="glass-price-card">
    <h2>💰 Đổi giá bán</h2>

    <form asp-action="ChangeSalePrice" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="productId" value="@Model.Id" />

        <div class="mb-3">
            <label class="glass-label">Sản phẩm</label>
            <div class="glass-info-static">@Model.Name</div>
        </div>

        <div class="mb-3">
            <label class="glass-label">Giá hiện tại</label>
            <div class="glass-info-static" style="color: #666;">
                @Model.PriceVnd.ToString("N0") VND
            </div>
        </div>

        <div class="mb-3">
            <label class="glass-label">Giá mới áp dụng</label>
            <input type="number"
                   name="newPrice"
                   class="form-control glass-input"
                   placeholder="Nhập số tiền (VND)..."
                   required />
        </div>

        <div class="mb-3">
            <label class="glass-label">Lý do thay đổi</label>
            <textarea name="reason"
                      class="form-control glass-input"
                      rows="3"
                      placeholder="VD: Điều chỉnh theo thị trường, khuyến mãi..."
                      required></textarea>
        </div>

        <div class="glass-btn-group">
            <button type="submit" class="btn-glass-save">
                💾 Lưu giá mới
            </button>
            <a asp-action="Index" class="btn-glass-back">
                ⬅ Quay lại
            </a>
        </div>
    </form>
</div>
