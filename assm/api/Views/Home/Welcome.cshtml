@{
    ViewData["Title"] = "Home";
}

<style>
    /* ── Hero Section ── */
    .hero-section {
        position: relative;
        width: 100%;
        min-height: 520px;
        overflow: hidden;
        border-radius: 18px;
        margin: 20px auto;
        max-width: 1200px;
        box-shadow: 0 20px 60px rgba(0,0,0,.18);
    }

    .hero-section img.hero-bg {
        width: 100%;
        height: 520px;
        object-fit: cover;
        object-position: center 40%;
        display: block;
    }

    /* dark gradient overlay */
    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(0,0,0,.10) 0%,
            rgba(0,0,0,.35) 50%,
            rgba(0,0,0,.72) 100%
        );
        z-index: 1;
    }

    /* content on top of overlay */
    .hero-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 2;
        padding: 48px 52px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 14px;
    }

    .hero-tag {
        display: inline-block;
        background: rgba(255,255,255,.16);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,.26);
        color: #fff;
        font-size: 11px;
        font-weight: 700;
        letter-spacing: .14em;
        text-transform: uppercase;
        padding: 6px 16px;
        border-radius: 40px;
    }

    .hero-title {
        font-family: 'Playfair Display', Georgia, serif;
        font-size: clamp(36px, 5vw, 64px);
        font-weight: 800;
        color: #fff;
        line-height: 1.08;
        text-shadow: 0 4px 24px rgba(0,0,0,.35);
        margin: 0;
    }

    .hero-subtitle {
        font-size: 16px;
        color: rgba(255,255,255,.82);
        max-width: 520px;
        line-height: 1.6;
        margin: 0;
    }

    .hero-actions {
        display: flex;
        gap: 14px;
        margin-top: 8px;
        flex-wrap: wrap;
    }

    .hero-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 13px 32px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 700;
        letter-spacing: .06em;
        text-decoration: none;
        transition: all .25s ease;
        cursor: pointer;
        border: none;
    }

    .hero-btn-primary {
        background: linear-gradient(135deg, #e8a54b, #d4882c);
        color: #fff;
        box-shadow: 0 8px 24px rgba(228,165,75,.35);
    }

    .hero-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(228,165,75,.5);
        color: #fff;
        background: linear-gradient(135deg, #f0b45a, #d4882c);
    }

    .hero-btn-outline {
        background: rgba(255,255,255,.10);
        color: #fff;
        border: 1.5px solid rgba(255,255,255,.35);
        backdrop-filter: blur(6px);
    }

    .hero-btn-outline:hover {
        background: rgba(255,255,255,.22);
        color: #fff;
        transform: translateY(-2px);
    }

    /* ── Stats row ── */
    .stats-row {
        display: flex;
        gap: 20px;
        max-width: 1200px;
        margin: 28px auto 0;
        padding: 0 12px;
        flex-wrap: wrap;
    }

    .stat-card {
        flex: 1;
        min-width: 160px;
        background: rgba(255,255,255,.65);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(0,0,0,.06);
        border-radius: 14px;
        padding: 22px 26px;
        text-align: center;
        transition: transform .25s ease, box-shadow .25s ease;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0,0,0,.10);
    }

    .stat-icon {
        font-size: 28px;
        margin-bottom: 8px;
    }

    .stat-number {
        font-size: 26px;
        font-weight: 800;
        color: #2c2c2c;
    }

    .stat-label {
        font-size: 12px;
        color: rgba(0,0,0,.5);
        letter-spacing: .06em;
        text-transform: uppercase;
        margin-top: 4px;
    }

    /* ── Animate in ── */
    .hero-content > * {
        opacity: 0;
        transform: translateY(22px);
        animation: fadeUp .7s ease forwards;
    }
    .hero-content > *:nth-child(1) { animation-delay: .15s; }
    .hero-content > *:nth-child(2) { animation-delay: .30s; }
    .hero-content > *:nth-child(3) { animation-delay: .45s; }
    .hero-content > *:nth-child(4) { animation-delay: .60s; }

    .stat-card {
        opacity: 0;
        transform: translateY(18px);
        animation: fadeUp .6s ease forwards;
    }
    .stat-card:nth-child(1) { animation-delay: .5s; }
    .stat-card:nth-child(2) { animation-delay: .65s; }
    .stat-card:nth-child(3) { animation-delay: .8s; }
    .stat-card:nth-child(4) { animation-delay: .95s; }

    @@keyframes fadeUp {
        to { opacity: 1; transform: translateY(0); }
    }

    @@media (max-width: 640px) {
        .hero-section { min-height: 380px; border-radius: 0; margin: 0; }
        .hero-section img.hero-bg { height: 380px; }
        .hero-content { padding: 28px 24px; }
        .hero-title { font-size: 28px; }
        .hero-subtitle { font-size: 14px; }
        .stat-card { min-width: 120px; padding: 16px; }
    }
</style>

<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet" />

