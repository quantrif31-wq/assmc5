@model IEnumerable<lab4.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Quản lý đơn mua hàng";
}

<style>
    /* 1. Bao quanh toàn bộ nội dung - Tăng độ bo góc đồng bộ 32px */
    .admin-list-wrap {
        width: min(1200px, calc(100% - 40px));
        margin: 40px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.45);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 32px;
        border: 1px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    /* 2. Tiêu đề mới có Icon (Giống ảnh mẫu bạn gửi) */
    .header-section {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 5px;
    }

    .header-icon {
        font-size: 26px;
        display: flex;
        align-items: center;
    }

    .admin-title {
        font-weight: 850;
        font-size: 28px;
        color: #2c2c2c;
        margin: 0;
        letter-spacing: -0.5px;
    }

    .admin-subtitle {
        font-size: 13px;
        color: rgba(0,0,0,0.4);
        margin-bottom: 25px;
        font-weight: 600;
        display: block;
        padding-left: 2px;
    }

    /* 3. Nút Thêm mới sản phẩm (Ink Style) */
    .btn-create-ink {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #000;
        color: #fff;
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 13px;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-bottom: 25px;
    }

        .btn-create-ink:hover {
            background: #333;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            color: #fff;
        }

    /* 4. Cấu trúc Bảng Kính (Floating Rows) */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
    }

        .glass-table thead th {
            border: none;
            color: rgba(0, 0, 0, 0.4);
            font-size: 11px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 10px 20px;
        }

        .glass-table tbody tr {
            background: rgba(255, 255, 255, 0.6);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .glass-table tbody tr:hover {
                background: rgba(255, 255, 255, 0.9);
                transform: translateY(-3px) scale(1.005);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
            }

        .glass-table td {
            padding: 18px 20px;
            border: none;
            vertical-align: middle;
            font-weight: 600;
            color: #2c2c2c;
        }

            .glass-table td:first-child {
                border-radius: 15px 0 0 15px;
            }

            .glass-table td:last-child {
                border-radius: 0 15px 15px 0;
            }

    /* 5. Badge trạng thái Đơn hàng */
    .badge-status {
        font-size: 10px;
        padding: 5px 12px;
        border-radius: 6px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .bg-received {
        background: rgba(46, 125, 50, 0.1);
        color: #2e7d32;
    }

    .bg-pending {
        background: rgba(240, 140, 0, 0.1);
        color: #f08c00;
    }

    /* 6. Nút hành động */
    .action-link {
        text-decoration: none;
        font-size: 12px;
        font-weight: 700;
        color: #2c2c2c;
        padding: 8px 14px;
        border-radius: 8px;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: transparent;
        border: none;
    }

        .action-link:hover {
            background: rgba(0, 0, 0, 0.05);
        }

    .btn-receive-ink {
        background: #000;
        color: #fff !important;
    }

        .btn-receive-ink:hover {
            background: #333;
        }
</style>

<div class="admin-list-wrap">
    <div class="header-section">
        <span class="header-icon">📦</span>
        <h2 class="admin-title">Quản lý đơn mua hàng</h2>
    </div>

    <a asp-action="Create" class="btn-create-ink">
        <span>➕</span> TẠO ĐƠN MUA MỚI
    </a>

    <div class="table-responsive">
        <table class="glass-table">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Nhà cung cấp</th>
                    <th>Ngày đặt</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var po in Model)
                {
                    <tr>
                        <td>
                            <div style="font-weight: 800; color: #000;">#@po.Code</div>
                        </td>
                        <td>
                            <div style="font-weight: 700;">@po.Supplier.Name</div>
                        </td>
                        <td style="opacity: 0.6; font-size: 13px;">
                            @po.OrderDate.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <span class="badge-status @(po.Status == "RECEIVED" ? "bg-received" : "bg-pending")">
                                @(po.Status == "RECEIVED" ? "✔ Đã nhập kho" : "● " + po.Status)
                            </span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@po.Id" class="action-link">
                                📄 <span>CHI TIẾT</span>
                            </a>

                            @if (po.Status != "RECEIVED")
                            {
                                <span style="opacity: 0.15; margin: 0 8px;">|</span>
                                <a asp-controller="GoodsReceipts"
                                   asp-action="Create"
                                   asp-route-purchaseOrderId="@po.Id"
                                   class="action-link btn-receive-ink">
                                    🚚 <span>NHẬP KHO</span>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

