@model IEnumerable<lab4.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Quản lý đơn mua hàng";
}

<style>
    /* Wrapper đồng bộ với hệ thống khung viền trang chủ */
    .admin-list-wrap {
        width: min(1200px, calc(100% - 64px));
        margin: 22px auto 0;
        position: relative;
        z-index: 1;
    }

    /* Container hiệu ứng kính mờ */
    .glass-panel {
        padding: 32px;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 22px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.08);
    }

    /* Tiêu đề chữ rỗng theo style WELCOME */
    .admin-title {
        text-align: left;
        font-weight: 900;
        letter-spacing: .1em;
        font-size: 32px;
        text-transform: uppercase;
        color: transparent;
        -webkit-text-stroke: 1.5px rgba(0, 0, 0, 0.35);
        margin-bottom: 25px;
    }

    /* Nút thêm mới theo style btn-explore */
    .btn-create-ink {
        display: inline-block;
        border: 1px solid rgba(0, 0, 0, 0.40);
        background: rgba(0, 0, 0, 0.75);
        color: #fff;
        padding: 10px 24px;
        border-radius: 4px;
        font-weight: 800;
        letter-spacing: .08em;
        font-size: 12px;
        text-transform: uppercase;
        text-decoration: none;
        box-shadow: 0 10px 18px rgba(0, 0, 0, 0.15);
        margin-bottom: 25px;
        transition: all 0.2s ease;
    }

    .btn-create-ink:hover {
        background: #000;
        color: #fff;
        transform: translateY(-2px);
    }

    /* Bảng phong cách tối giản (Floating Rows) */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
    }

    .glass-table thead th {
        border: none;
        color: rgba(0, 0, 0, 0.4);
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 0 20px;
    }

    .glass-table tbody tr {
        background: rgba(255, 255, 255, 0.5);
        transition: all 0.3s ease;
    }

    .glass-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.85);
        transform: scale(1.01);
    }

    .glass-table td {
        padding: 16px 20px;
        border: none;
        vertical-align: middle;
        font-weight: 600;
        color: var(--ink);
    }

    /* Bo góc cho từng hàng */
    .glass-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Badge trạng thái */
    .badge-status {
        padding: 5px 12px;
        border-radius: 6px;
        font-size: 10px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .bg-received { background: #e8f5e9; color: #2e7d32; }
    .bg-pending { background: #fff9db; color: #f08c00; }

    /* Thao tác nút bấm nhỏ */
    .action-btn {
        padding: 8px 16px;
        border-radius: 4px;
        font-weight: 800;
        font-size: 11px;
        text-decoration: none;
        transition: all 0.2s;
        border: 1px solid rgba(0,0,0,0.1);
        display: inline-block;
    }

    .btn-details-glass { background: #fff; color: var(--ink); }
    .btn-receipt-glass { background: var(--ink); color: #fff; border: none; }

    .action-btn:hover {
        opacity: 0.8;
        transform: translateY(-1px);
    }
</style>

<div class="admin-list-wrap">
    <h2 class="admin-title">Purchase Orders</h2>

    <div class="glass-panel">
        <a asp-action="Create" class="btn-create-ink">
            ➕ Create New Order
        </a>

        

        <div class="table-responsive">
            <table class="glass-table">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Nhà cung cấp</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var po in Model)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 800; color: #000;">#@po.Code</div>
                            </td>
                            <td>
                                <div style="font-weight: 700;">@po.Supplier.Name</div>
                            </td>
                            <td style="opacity: 0.6; font-size: 13px;">
                                @po.OrderDate.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <span class="badge-status @(po.Status == "RECEIVED" ? "bg-received" : "bg-pending")">
                                    @(po.Status == "RECEIVED" ? "✔ Received" : "● " + po.Status)
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@po.Id" class="action-btn btn-details-glass">
                                    DETAILS
                                </a>

                                @if (po.Status != "RECEIVED")
                                {
                                    <a asp-controller="GoodsReceipts"
                                       asp-action="Create"
                                       asp-route-purchaseOrderId="@po.Id"
                                       class="action-btn btn-receipt-glass ms-1">
                                        RECEIVE
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Sparkle SVG trang trí đồng bộ trang chủ *@
<svg class="sparkle" viewBox="0 0 64 64" style="position: fixed; right: 40px; bottom: 40px; width: 60px; height: 60px; opacity: .1; pointer-events: none;">
    <path fill="var(--ink)" d="M32 6l4.2 16.4L52 26.7 35.8 31 32 47 28.2 31 12 26.7l15.8-4.3z" />
</svg>