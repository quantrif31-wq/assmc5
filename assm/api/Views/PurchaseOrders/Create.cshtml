@using lab4.Models
@model PurchaseOrder

@{
    ViewData["Title"] = "Tạo đơn đặt hàng";
}

<style>
    /* Container chính Glassmorphism */
    .purchase-container {
        width: min(1100px, calc(100% - 40px));
        margin: 40px auto;
        padding: 35px;
        background: rgba(255, 255, 255, 0.45);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    .purchase-container h2 {
        font-weight: 800;
        letter-spacing: -1px;
        color: var(--ink, #2c2c2c);
        margin-bottom: 25px;
    }

    /* Nhãn và Select Nhà cung cấp */
    .glass-label {
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: rgba(0, 0, 0, 0.4);
        margin-bottom: 8px;
        display: block;
    }

    .glass-select, .glass-input {
        background: rgba(255, 255, 255, 0.6) !important;
        border: 1px solid rgba(0, 0, 0, 0.08) !important;
        border-radius: 10px !important;
        font-weight: 600;
        color: var(--ink) !important;
        padding: 10px 15px !important;
    }

    .glass-select:focus, .glass-input:focus {
        background: rgba(255, 255, 255, 0.9) !important;
        border-color: var(--ink) !important;
        outline: none;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05) !important;
    }

    /* Bảng danh sách hàng (Floating Rows) */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        margin-top: 20px;
    }

    .glass-table thead th {
        border: none;
        color: rgba(0, 0, 0, 0.4);
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        padding: 0 20px;
    }

    .glass-table tbody tr {
        background: rgba(255, 255, 255, 0.5);
        transition: all 0.3s ease;
    }

    .glass-table td {
        padding: 15px 20px;
        border: none;
        vertical-align: middle;
    }

    .glass-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Nút bấm */
    .btn-glass-add {
        background: #fff;
        color: var(--ink);
        border: 1px solid rgba(0,0,0,0.1);
        font-weight: 700;
        font-size: 12px;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.2s;
    }

    .btn-glass-add:hover {
        background: #f8f8f8;
        transform: translateY(-1px);
    }

    .btn-create-ink {
        background: var(--ink, #2c2c2c);
        color: #fff;
        border: none;
        padding: 14px 40px;
        border-radius: 12px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

    .btn-create-ink:hover {
        background: #000;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .btn-remove-glass {
        background: rgba(211, 47, 47, 0.1);
        color: #d32f2f;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        font-weight: 800;
        transition: all 0.2s;
    }

    .btn-remove-glass:hover {
        background: #d32f2f;
        color: #fff;
    }
</style>

<div class="purchase-container">
    <h2>📝 Tạo đơn đặt hàng</h2>

    <div asp-validation-summary="All" class="text-danger mb-4"></div>

    <form asp-action="Create" method="post">

        <div class="mb-5" style="max-width: 400px;">
            <label class="glass-label">Nhà cung cấp</label>
            <select asp-for="SupplierId" class="form-select glass-select" id="supplierSelect">
                <option value="">-- Chọn nhà cung cấp --</option>
                @foreach (var s in ViewBag.Suppliers)
                {
                    <option value="@s.Id">@s.Name</option>
                }
            </select>
        </div>

        <h4 class="glass-label" style="font-size: 14px; color: var(--ink);">📦 Chi tiết danh sách hàng</h4>

        <table class="glass-table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th width="150">Số lượng</th>
                    <th width="200">Giá nhập ($)</th>
                    <th width="50"></th>
                </tr>
            </thead>
            <tbody id="itemsBody">
                <tr>
                    <td>
                        <select class="form-select glass-select productSelect"></select>
                    </td>
                    <td>
                        <input type="number" class="form-control glass-input quantity" placeholder="0" />
                    </td>
                    <td>
                        <input type="number" step="0.01" class="form-control glass-input price" placeholder="0.00" />
                    </td>
                    <td class="text-end">
                        <button type="button" class="btn-remove-glass removeRow">×</button>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4 d-flex justify-content-between align-items-center">
            <button type="button" class="btn-glass-add" id="addRow">
                ➕ Thêm dòng sản phẩm
            </button>
            
            <button class="btn-create-ink">
                Tạo đơn hàng ngay
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const supplierSelect = document.getElementById("supplierSelect");
        const tbody = document.getElementById("itemsBody");

        // ===== THÊM DÒNG =====
        document.getElementById("addRow").addEventListener("click", addRow);

        function addRow() {
            const row = document.createElement("tr");
            row.innerHTML = `
                <td><select class="form-select glass-select productSelect"></select></td>
                <td><input type="number" class="form-control glass-input quantity" placeholder="0" /></td>
                <td><input type="number" step="0.01" class="form-control glass-input price" placeholder="0.00" /></td>
                <td class="text-end"><button type="button" class="btn-remove-glass removeRow">×</button></td>
            `;
            tbody.appendChild(row);
            reindex();
            loadProducts();
        }

        // ===== XÓA DÒNG =====
        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("removeRow")) {
                const rows = document.querySelectorAll("#itemsBody tr");
                if(rows.length > 1) {
                    e.target.closest("tr").remove();
                    reindex();
                }
            }
        });

        // ===== ĐÁNH LẠI INDEX ĐỂ SUBMIT LIST =====
        function reindex() {
            const rows = document.querySelectorAll("#itemsBody tr");
            rows.forEach((row, i) => {
                row.querySelector(".productSelect").name = `Items[${i}].ProductId`;
                row.querySelector(".quantity").name = `Items[${i}].QuantityOrdered`;
                row.querySelector(".price").name = `Items[${i}].UnitPrice`;
            });
        }

        // ===== LOAD DANH SÁCH SẢN PHẨM THEO NCC =====
        supplierSelect.addEventListener("change", loadProducts);

        function loadProducts() {
            const supplierId = supplierSelect.value;
            if (!supplierId) return;

            fetch(`/PurchaseOrders/GetProductsBySupplier?supplierId=${supplierId}`)
                .then(res => res.json())
                .then(data => {
                    document.querySelectorAll(".productSelect").forEach(select => {
                        const oldValue = select.value;
                        select.innerHTML = '<option value="">-- Chọn sản phẩm --</option>';
                        data.forEach(p => {
                            select.innerHTML += `<option value="${p.id}">${p.name}</option>`;
                        });
                        select.value = oldValue;
                    });
                });
        }

        // ===== TỰ ĐỘNG LẤY GIÁ NHẬP GẦN NHẤT =====
        document.addEventListener("change", function (e) {
            if (!e.target.classList.contains("productSelect")) return;

            const row = e.target.closest("tr");
            const productId = e.target.value;
            const supplierId = supplierSelect.value;

            if (!productId || !supplierId) return;

            fetch(`/PurchaseOrders/GetLastPurchasePrice?supplierId=${supplierId}&productId=${productId}`)
                .then(res => res.json())
                .then(data => {
                    row.querySelector(".price").value = data.price;
                });
        });

        document.addEventListener("DOMContentLoaded", reindex);
    </script>
}