@model lab4.Models.PurchaseOrder

@{
    ViewData["Title"] = "Chi tiết đơn mua hàng";
}

<style>
    /* Container chính Glassmorphism */
    .purchase-detail-wrap {
        width: min(1000px, calc(100% - 40px));
        margin: 40px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.05);
        position: relative;
        z-index: 1;
    }

    /* Tiêu đề chữ rỗng phong cách Welcome */
    .glass-title {
        font-weight: 900;
        letter-spacing: .1em;
        font-size: 28px;
        text-transform: uppercase;
        color: transparent;
        -webkit-text-stroke: 1.5px rgba(0,0,0,.35);
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    /* Grid thông tin đơn hàng */
    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 35px;
    }

    .summary-item {
        background: rgba(255, 255, 255, 0.3);
        padding: 15px 20px;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .summary-label {
        display: block;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        color: rgba(0, 0, 0, 0.4);
        margin-bottom: 4px;
    }

    .summary-value {
        font-weight: 700;
        color: var(--ink);
    }

    /* Bảng sản phẩm kính mờ (Floating Rows) */
    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        margin-bottom: 30px;
    }

    .glass-table thead th {
        border: none;
        color: rgba(0, 0, 0, 0.4);
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        padding: 0 20px;
    }

    .glass-table tbody tr {
        background: rgba(255, 255, 255, 0.5);
        transition: transform 0.2s;
    }

    .glass-table tbody tr:hover {
        transform: scale(1.005);
        background: rgba(255, 255, 255, 0.7);
    }

    .glass-table td {
        padding: 15px 20px;
        border: none;
        vertical-align: middle;
        font-weight: 600;
    }

    .glass-table td:first-child { border-radius: 12px 0 0 12px; }
    .glass-table td:last-child { border-radius: 0 12px 12px 0; }

    /* Nút bấm đồng bộ Explore Menu */
    .btn-action-ink {
        display: inline-block;
        border: 1px solid rgba(0,0,0,.40);
        background: rgba(0,0,0,.75);
        color: #fff;
        padding: 12px 30px;
        border-radius: 6px;
        font-weight: 800;
        letter-spacing: .08em;
        font-size: 12px;
        text-transform: uppercase;
        text-decoration: none;
        box-shadow: 0 10px 18px rgba(0,0,0,.15);
        transition: all 0.2s;
    }

    .btn-action-ink:hover {
        background: #000;
        color: #fff;
        transform: translateY(-2px);
    }

    .badge-received {
        background: #e8f5e9;
        color: #2e7d32;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 12px;
    }
</style>

<div class="purchase-detail-wrap">
    <h2 class="glass-title">📦 Chi tiết đơn mua</h2>

    <div class="summary-grid">
        <div class="summary-item">
            <span class="summary-label">Mã đơn hàng</span>
            <span class="summary-value">#@Model.Code</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Nhà cung cấp</span>
            <span class="summary-value">@Model.Supplier.Name</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Ngày đặt hàng</span>
            <span class="summary-value">@Model.OrderDate.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="summary-item">
            <span class="summary-label">Trạng thái</span>
            <span class="summary-value" style="color: #f08c00;">● @Model.Status</span>
        </div>
    </div>

    

    <table class="glass-table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th class="text-center">SL đặt</th>
                <th class="text-center">Đơn giá</th>
                <th class="text-center">Đã nhận</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td style="font-weight: 700;">@item.Product.Name</td>
                    <td class="text-center">@item.QuantityOrdered</td>
                    <td class="text-center">@item.UnitPrice.ToString("N0") $</td>
                    <td class="text-center">
                        <span class="badge-received">
                            @item.QuantityReceived / @item.QuantityOrdered
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-controller="GoodsReceipts"
           asp-action="Create"
           asp-route-purchaseOrderId="@Model.Id"
           class="btn-action-ink">
            🚚 Nhập kho ngay
        </a>
    </div>
</div>

@* Sparkle SVG trang trí đồng bộ trang chủ *@
<svg class="sparkle" viewBox="0 0 64 64" style="position: fixed; right: 40px; bottom: 40px; width: 60px; height: 60px; opacity: .1; pointer-events: none;">
    <path fill="var(--ink)" d="M32 6l4.2 16.4L52 26.7 35.8 31 32 47 28.2 31 12 26.7l15.8-4.3z" />
</svg>