}

@section Styles {
<style>
    .audit-container {
        max-width: 1100px;
        margin: 40px auto;
        padding: 0 24px;
    }

    .audit-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .audit-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #1f1f1f;
        margin-bottom: 6px;
    }

    .audit-header p {
        color: #666;
        font-size: 14px;
    }

    /* ===== FILTER BAR ===== */
    .filter-bar {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter-bar .filter-btn {
        padding: 8px 18px;
        border-radius: 999px;
        border: 1px solid rgba(0,0,0,.15);
        background: #fff;
        color: #333;
        font-size: 13px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        transition: all .2s;
    }

    .filter-bar .filter-btn:hover {
        background: #f5f5f5;
        border-color: rgba(0,0,0,.25);
    }

    .filter-bar .filter-btn.active {
        background: #1f1f1f;
        color: #fff;
        border-color: #1f1f1f;
    }

    .filter-bar .search-box {
        margin-left: auto;
        display: flex;
        gap: 8px;
    }

    .filter-bar .search-box input {
        padding: 8px 14px;
        border: 1px solid rgba(0,0,0,.15);
        border-radius: 999px;
        font-size: 13px;
        width: 220px;
        outline: none;
    }

    .filter-bar .search-box input:focus {
        border-color: rgba(0,0,0,.35);
    }

    .filter-bar .search-box button {
        padding: 8px 16px;
        border-radius: 999px;
        border: none;
        background: #1f1f1f;
        color: #fff;
        font-size: 13px;
        cursor: pointer;
    }

    /* ===== TABLE ===== */
    .audit-table-wrapper {
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        border: 1px solid rgba(0,0,0,.08);
        box-shadow: 0 12px 40px rgba(0,0,0,.06);
        overflow: hidden;
    }

    .audit-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    .audit-table thead {
        background: #fafafa;
    }

    .audit-table th {
        padding: 14px 16px;
        text-align: left;
        font-weight: 600;
        color: #555;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: .05em;
        border-bottom: 1px solid rgba(0,0,0,.08);
    }

    .audit-table td {
        padding: 14px 16px;
        border-bottom: 1px solid rgba(0,0,0,.05);
        vertical-align: top;
    }

    .audit-table tbody tr {
        transition: background .15s;
    }

    .audit-table tbody tr:hover {
        background: rgba(0,0,0,.02);
    }

    /* Badges */
    .badge-action {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-order {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-price {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-other {
        background: #e5e7eb;
        color: #374151;
    }

    /* Values */
    .old-value {
        color: #dc2626;
        text-decoration: line-through;
        font-weight: 500;
    }

    .new-value {
        color: #16a34a;
        font-weight: 600;
    }

    .arrow {
        color: #999;
        margin: 0 4px;
    }

    .performer {
        font-weight: 600;
        color: #1f1f1f;
    }

    .timestamp {
        color: #888;
        font-size: 13px;
        white-space: nowrap;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }

    .empty-state .icon {
        font-size: 48px;
        margin-bottom: 12px;
    }

    /* Stats cards */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 24px;
    }

    .stat-card {
        background: rgba(255,255,255,.85);
        backdrop-filter: blur(12px);
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,.08);
        padding: 20px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(0,0,0,.04);
    }

    .stat-card .number {
        font-size: 28px;
        font-weight: 700;
        color: #1f1f1f;
    }

    .stat-card .label {
        font-size: 13px;
        color: #888;
        margin-top: 4px;
    }

    @@media (max-width: 768px) {
        .filter-bar {
            flex-direction: column;
            align-items: stretch;
        }

        .filter-bar .search-box {
            margin-left: 0;
        }

        .filter-bar .search-box input {
            width: 100%;
        }

        .audit-table {
            font-size: 13px;
        }

        .audit-table th, .audit-table td {
            padding: 10px 12px;
        }
    }
</style>
}

<div class="audit-container">
    <div class="audit-header">
