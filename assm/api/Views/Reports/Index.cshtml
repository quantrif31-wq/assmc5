@{
    ViewData["Title"] = "Báo cáo doanh thu";
}

@section Styles {
<style>
    /* ===== DASHBOARD CONTAINER ===== */
    .dashboard-wrap {
        width: min(1200px, calc(100% - 64px));
        margin: 28px auto 0;
        position: relative;
        z-index: 1;
    }

    /* ===== TIÊU ĐỀ OUTLINE ===== */
    .dashboard-title {
        font-weight: 900;
        letter-spacing: .10em;
        font-size: clamp(26px, 4.2vw, 40px);
        text-transform: uppercase;
        color: transparent;
        -webkit-text-stroke: 2px rgba(0,0,0,.30);
        text-shadow: 0 2px 0 rgba(255,255,255,.25), 0 8px 14px rgba(0,0,0,.08);
        margin-bottom: 28px;
        text-align: center;
    }

    /* ===== KPI CARDS ===== */
    .kpi-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
        gap: 18px;
        margin-bottom: 32px;
    }

    .kpi-card {
        padding: 22px 20px;
        background: rgba(255,255,255,.48);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,.55);
        box-shadow: 0 12px 32px rgba(0,0,0,.06);
        transition: transform .3s ease, box-shadow .3s ease;
        position: relative;
        overflow: hidden;
    }

    .kpi-card::before {
        content: '';
        position: absolute;
        top: -40%;
        right: -30%;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        opacity: .08;
        pointer-events: none;
    }

    .kpi-card:nth-child(1)::before { background: #2e7d32; }
    .kpi-card:nth-child(2)::before { background: #f08c00; }
    .kpi-card:nth-child(3)::before { background: #1565c0; }
    .kpi-card:nth-child(4)::before { background: #6a1b9a; }
    .kpi-card:nth-child(5)::before { background: #00897b; }

    .kpi-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 18px 44px rgba(0,0,0,.10);
        background: rgba(255,255,255,.62);
    }

    .kpi-icon {
        font-size: 28px;
        margin-bottom: 8px;
        display: block;
    }

    .kpi-label {
        display: block;
        font-size: 11px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        color: rgba(0,0,0,.42);
        margin-bottom: 6px;
    }

    .kpi-value {
        font-size: 24px;
        font-weight: 900;
        color: var(--ink);
        display: block;
        line-height: 1.2;
    }

    .kpi-value small {
        font-size: 12px;
        font-weight: 600;
        opacity: .55;
    }

    /* ===== CHART PANELS ===== */
    .charts-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 22px;
        margin-bottom: 32px;
    }

    .chart-panel {
        padding: 26px;
        background: rgba(255,255,255,.44);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,.50);
        box-shadow: 0 14px 36px rgba(0,0,0,.07);
        transition: box-shadow .3s ease;
    }

    .chart-panel:hover {
        box-shadow: 0 18px 48px rgba(0,0,0,.10);
    }

    .chart-panel.full-width {
        grid-column: 1 / -1;
    }

    .chart-title {
        font-size: 13px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .8px;
        color: rgba(0,0,0,.45);
        margin-bottom: 18px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .chart-title span {
        font-size: 18px;
    }

    /* ===== RESPONSIVE ===== */
    @@media (max-width: 768px) {
        .charts-grid {
            grid-template-columns: 1fr;
        }

        .kpi-grid {
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 12px;
        }

        .dashboard-wrap {
            width: calc(100% - 32px);
        }
    }

    /* ===== ANIMATION ===== */
    @@keyframes fadeSlideUp {
        from { opacity: 0; transform: translateY(18px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    .kpi-card,
    .chart-panel {
        animation: fadeSlideUp .5s ease both;
    }

    .kpi-card:nth-child(1) { animation-delay: .05s; }
    .kpi-card:nth-child(2) { animation-delay: .10s; }
    .kpi-card:nth-child(3) { animation-delay: .15s; }
    .kpi-card:nth-child(4) { animation-delay: .20s; }
    .kpi-card:nth-child(5) { animation-delay: .25s; }

    .chart-panel:nth-child(1) { animation-delay: .30s; }
    .chart-panel:nth-child(2) { animation-delay: .35s; }
    .chart-panel:nth-child(3) { animation-delay: .40s; }
    .chart-panel:nth-child(4) { animation-delay: .45s; }
</style>
}

<div class="dashboard-wrap">

    <!-- TITLE -->
    <h2 class="dashboard-title">Báo cáo doanh thu</h2>

    <!-- KPI CARDS -->
    <div class="kpi-grid">
        <div class="kpi-card">
            <span class="kpi-icon">💰</span>
            <span class="kpi-label">Doanh thu thực</span>
            <span class="kpi-value" style="color:#2e7d32;">@ViewBag.TotalRevenue.ToString("N0") ₫</span>
        </div>

        <div class="kpi-card">
            <span class="kpi-icon">⏳</span>
            <span class="kpi-label">Doanh thu dự kiến</span>
            <span class="kpi-value" style="color:#f08c00;">@ViewBag.ExpectedRevenue.ToString("N0") ₫</span>
        </div>

        <div class="kpi-card">
            <span class="kpi-icon">🧾</span>
            <span class="kpi-label">Đơn hàng</span>
            <span class="kpi-value">
                @ViewBag.TotalOrders
                <small style="color:#2e7d32;">(@ViewBag.CompletedOrders hoàn tất)</small>
            </span>
        </div>

        <div class="kpi-card">
            <span class="kpi-icon">📦</span>
            <span class="kpi-label">Tổng tồn kho</span>
            <span class="kpi-value">@ViewBag.TotalInventory <small>units</small></span>
        </div>

        <div class="kpi-card">
            <span class="kpi-icon">📊</span>
            <span class="kpi-label">Tỷ lệ hoàn tất</span>
            <span class="kpi-value" style="color:#00897b;">@ViewBag.CompletionRate%</span>
        </div>
    </div>

    <!-- CHARTS -->
    <div class="charts-grid">

        <!-- 1. DOANH THU THEO NGÀY -->
        <div class="chart-panel full-width">
            <div class="chart-title"><span>📈</span> Biểu đồ doanh thu theo ngày</div>
            <canvas id="revenueChart" style="max-height:360px;"></canvas>
        </div>

        <!-- 2. TOP SẢN PHẨM -->
        <div class="chart-panel">
            <div class="chart-title"><span>🏆</span> Top 5 sản phẩm bán chạy</div>
            <canvas id="topProductsChart"></canvas>
        </div>

        <!-- 3. TRẠNG THÁI ĐƠN HÀNG -->
        <div class="chart-panel">
            <div class="chart-title"><span>🍩</span> Trạng thái đơn hàng</div>
            <canvas id="statusChart"></canvas>
        </div>

        <!-- 4. TỒN KHO -->
        <div class="chart-panel full-width">
            <div class="chart-title"><span>📦</span> Tồn kho theo sản phẩm</div>
            <canvas id="inventoryChart" style="max-height:320px;"></canvas>
        </div>

    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // ===== DATA =====
    const revenueData  = @Html.Raw(Json.Serialize(ViewBag.RevenueByDay));
    const topProducts  = @Html.Raw(Json.Serialize(ViewBag.TopProducts));
    const inventories  = @Html.Raw(Json.Serialize(ViewBag.Inventories));
    const orderStatus  = @Html.Raw(Json.Serialize(ViewBag.OrdersByStatus));

    // ===== SHARED CONFIG =====
    const fontCfg = { family: 'system-ui', weight: '600' };
    const gridColor = 'rgba(0,0,0,.06)';

    // ==================== 1. REVENUE LINE CHART ====================
    (function () {
        const ctx = document.getElementById('revenueChart').getContext('2d');
        const grad = ctx.createLinearGradient(0, 0, 0, 360);
        grad.addColorStop(0, 'rgba(46,125,50,.18)');
        grad.addColorStop(1, 'rgba(46,125,50,0)');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: revenueData.map(x => x.date),
                datasets: [{
                    label: 'Doanh thu (₫)',
                    data: revenueData.map(x => x.total),
                    fill: true,
                    backgroundColor: grad,
                    borderColor: '#2e7d32',
                    borderWidth: 2.5,
                    tension: .4,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#2e7d32',
                    pointBorderWidth: 2,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: ctx => new Intl.NumberFormat('vi-VN').format(ctx.parsed.y) + ' ₫'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: gridColor },
                        ticks: {
                            font: fontCfg,
                            callback: v => new Intl.NumberFormat('vi-VN', { notation: 'compact' }).format(v)
                        }
                    },
                    x: { grid: { display: false }, ticks: { font: fontCfg } }
                }
            }
        });
    })();

    // ==================== 2. TOP PRODUCTS BAR CHART ====================
    (function () {
        const colors = ['#2e7d32','#43a047','#66bb6a','#81c784','#a5d6a7'];
        new Chart(document.getElementById('topProductsChart'), {
            type: 'bar',
            data: {
                labels: topProducts.map(x => x.product),
                datasets: [{
                    label: 'Số lượng bán',
                    data: topProducts.map(x => x.quantity),
                    backgroundColor: colors,
                    borderRadius: 8,
                    borderSkipped: false,
                    barPercentage: .65
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    x: { beginAtZero: true, grid: { color: gridColor }, ticks: { font: fontCfg } },
                    y: { grid: { display: false }, ticks: { font: { ...fontCfg, size: 11 } } }
                }
            }
        });
    })();

    // ==================== 3. ORDER STATUS DOUGHNUT ====================
    (function () {
        const statusColors = {
            'Pending':    '#f08c00',
            'Preparing':  '#1565c0',
            'Delivering': '#6a1b9a',
            'Done':       '#2e7d32',
            'Completed':  '#2e7d32',
            'Cancelled':  '#c62828'
        };
        const fallback = '#90a4ae';

        new Chart(document.getElementById('statusChart'), {
            type: 'doughnut',
            data: {
                labels: orderStatus.map(x => x.status),
                datasets: [{
                    data: orderStatus.map(x => x.count),
                    backgroundColor: orderStatus.map(x => statusColors[x.status] || fallback),
                    borderWidth: 2,
                    borderColor: 'rgba(255,255,255,.7)',
                    hoverOffset: 8
                }]
            },
            options: {
                responsive: true,
                cutout: '62%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { font: fontCfg, padding: 16, usePointStyle: true, pointStyleWidth: 10 }
                    }
                }
            }
        });
    })();

    // ==================== 4. INVENTORY BAR CHART ====================
    (function () {
        new Chart(document.getElementById('inventoryChart'), {
            type: 'bar',
            data: {
                labels: inventories.map(x => x.product),
                datasets: [{
                    label: 'Tồn kho',
                    data: inventories.map(x => x.quantity),
                    backgroundColor: 'rgba(21,101,192,.55)',
                    borderRadius: 6,
                    borderSkipped: false,
                    barPercentage: .6
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { color: gridColor }, ticks: { font: fontCfg } },
                    x: { grid: { display: false }, ticks: { font: { ...fontCfg, size: 10 }, maxRotation: 45 } }
                }
            }
        });
    })();
</script>
}