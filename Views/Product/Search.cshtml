        }

        .search-header {
            margin-bottom: 28px;
        }

        .search-title {
            font-weight: 800;
            font-size: 28px;
            margin: 0 0 8px;
            color: var(--ink);
        }

        .search-subtitle {
            color: rgba(0,0,0,.50);
            font-size: 14px;
        }

        .search-query-text {
            font-weight: 700;
            color: rgba(0,0,0,.72);
        }

        /* Filter Section */
        .filter-section {
            background: rgba(255,255,255,.80);
            border-radius: 14px;
            padding: 20px 24px;
            margin-bottom: 24px;
            border: 1px solid rgba(0,0,0,.08);
            box-shadow: 0 8px 20px rgba(0,0,0,.06);
        }

        .filter-row {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            align-items: flex-end;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .filter-group label {
            font-size: 12px;
            font-weight: 600;
            color: rgba(0,0,0,.55);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .filter-group input,
        .filter-group select {
            border: 1px solid rgba(0,0,0,.15);
            border-radius: 8px;
            padding: 10px 14px;
            font-size: 13px;
            background: #fff;
