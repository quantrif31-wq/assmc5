@section Styles {
    <style>
        /* Search Results Section */
        .search-results-band {
            margin-top: 32px;
            padding: 24px 0 40px;
            position: relative;
            min-height: 400px;
        }

        .search-results-wrap {
            width: min(1120px, calc(100% - 64px));
