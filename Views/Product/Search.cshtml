<form id="antiForgeryForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // Set selected option for sortBy dropdown
        (function() {
            const sortBy = '@sortBy';
            const select = document.getElementById('sortBy');
            if (select) {
                for (let option of select.options) {
                    option.selected = option.value === sortBy;
                }
            }
        })();

        (function () {
            const tokenInput = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');

            async function addToCart(productId) {
                const res = await fetch('/Cart/AddAjax', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                        'RequestVerificationToken': tokenInput ? tokenInput.value : ''
                    },
                    body: new URLSearchParams({ productId: productId, quantity: 1 })
                });

                if (!res.ok) {
                    let txt = '';
                    try { txt = await res.text(); } catch {}
                    throw new Error('Add failed: ' + res.status + ' ' + txt);
                }
                return await res.json();
            }

            function setBadge(totalQty) {
                const badge = document.getElementById('cartBadge');
                if (badge) badge.textContent = totalQty ?? 0;
            }

            document.addEventListener('click', async (e) => {
                const btn = e.target.closest('.js-add');
                if (!btn) return;

                btn.disabled = true;
                const oldText = btn.textContent;
                btn.textContent = 'ƒêang th√™m...';

                try {
                    const id = btn.getAttribute('data-id');
                    const data = await addToCart(id);

                    if (data && data.ok) {
                        setBadge(data.totalQty);
                        btn.textContent = 'ƒê√£ th√™m ‚úì';
                        setTimeout(() => { btn.textContent = oldText; }, 900);
                    } else {
                        btn.textContent = oldText;
                        alert(data?.message || 'Th√™m v√†o gi·ªè th·∫•t b·∫°i');
                    }
                } catch (err) {
                    btn.textContent = oldText;
                    alert(err?.message || 'Th√™m v√†o gi·ªè th·∫•t b·∫°i');
                } finally {
                    btn.disabled = false;
                }
            });
        })();
    </script>
}
