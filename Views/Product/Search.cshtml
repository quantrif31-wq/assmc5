            padding: 60px 20px;
            background: rgba(255,255,255,.70);
            border-radius: 16px;
            border: 1px solid rgba(0,0,0,.06);
        }

        .no-results-icon {
            font-size: 56px;
            margin-bottom: 16px;
            opacity: 0.35;
        }

        .no-results h2 {
            font-size: 22px;
            font-weight: 700;
            margin: 0 0 8px;
            color: var(--ink);
        }

        .no-results p {
            color: rgba(0,0,0,.50);
            margin: 0 0 20px;
        }

        .btn-back-menu {
            display: inline-block;
            background: rgba(0,0,0,.60);
            color: #fff;
            padding: 10px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 13px;
            transition: background 0.2s ease;
        }

        .btn-back-menu:hover {
            background: rgba(0,0,0,.80);
            color: #fff;
        }

        /* Active Filters */
        .active-filters {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 16px;
        }

        .filter-tag {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: rgba(0,0,0,.08);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            color: rgba(0,0,0,.65);
        }

        .filter-tag strong {
            color: rgba(0,0,0,.85);
        }

        @@media (max-width: 768px) {
            .filter-row {
                flex-direction: column;
                align-items: stretch;
            }

            .filter-group {
                width: 100%;
            }

            .filter-group input,
            .filter-group select {
                width: 100%;
            }

            .filter-actions {
                margin-left: 0;
                margin-top: 8px;
            }

            .result-card .inner {
                grid-template-columns: 80px 1fr;
                gap: 12px;
                padding: 12px;
            }

            .result-thumb {
                width: 75px;
                height: 75px;
            }

            .result-name {
                font-size: 16px;
            }
        }

        @@media (max-width: 520px) {
            .search-results-wrap {
                width: calc(100% - 32px);
            }

            .search-title {
                font-size: 22px;
            }

            .filter-section {
                padding: 16px;
            }
        }
    </style>
}

